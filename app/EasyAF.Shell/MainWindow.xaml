<fluent:RibbonWindow x:Class="EasyAF.Shell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyAF.Shell"
        xmlns:controls="clr-namespace:EasyAF.Shell.Controls"
        xmlns:fluent="urn:fluent-ribbon"
        xmlns:views="clr-namespace:EasyAF.Shell.Views"
        xmlns:viewsBackstage="clr-namespace:EasyAF.Shell.Views.Backstage"
        xmlns:conv="clr-namespace:EasyAF.Shell.Converters"
        mc:Ignorable="d"
        Title="EasyAF v3" 
        Height="768" 
        Width="1024"
        MinWidth="800"
        MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackgroundBrush}">
    <fluent:RibbonWindow.Resources>
        <!-- CROSS-MODULE EDIT: 2025-11-10 SANITY CHECK (Iconography) -->
        <!-- Modified for: Add glyph icons to Ribbon buttons using Segoe MDL2 Assets for consistent visual language -->
        <!-- Related modules: Shell (MainWindow) -->
        <!-- Rollback instructions: Remove <fluent:Button.Icon> elements -->
        
        <!-- CROSS-MODULE EDIT: 2025-01-20 Vertical File Tab System -->
        <!-- Modified for: Merge file tab styles resource dictionary -->
        <!-- Related modules: Shell (FileTabStyles.xaml) -->
        <!-- Rollback instructions: Remove merged dictionary below -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/FileTabStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <conv:NullToBooleanConverter x:Key="NullToBooleanConverter" />
            <conv:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter" />
            <conv:PathToFileNameConverter x:Key="PathToFileNameConverter" />
            <conv:PathToDirectoryConverter x:Key="PathToDirectoryConverter" />
            <conv:NonZeroToVisibilityConverter x:Key="NonZeroToVisibilityConverter" />
            <conv:BooleanOrToVisibilityConverter x:Key="BooleanOrToVisibilityConverter" />
            <conv:VisibilityOrConverter x:Key="VisibilityOrConverter" />
            <conv:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisibility" />
            <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
            <Style BasedOn="{StaticResource BaseButtonStyle}" TargetType="Button" />
        </ResourceDictionary>
    </fluent:RibbonWindow.Resources>
    <Grid Background="{DynamicResource PrimaryBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Ribbon -->
        <fluent:Ribbon x:Name="MainRibbon" Grid.Row="0" Background="{DynamicResource SecondaryBackgroundBrush}">
            <fluent:Ribbon.Menu>
                <fluent:Backstage Background="{DynamicResource PrimaryBackgroundBrush}">
                    <fluent:BackstageTabControl>
                        <fluent:BackstageTabItem Header="New">
                            <StackPanel Margin="20">
                                <TextBlock Text="Create new document" 
                                           Foreground="{DynamicResource TextPrimaryBrush}" 
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="Select a module to create an empty document" 
                                           Foreground="{DynamicResource TextSecondaryBrush}" 
                                           Margin="0,4,0,12"/>
                                <!-- Module selection list -->
                                <ListBox ItemsSource="{Binding FileCommands.AvailableDocumentModules}"
                                         SelectedItem="{Binding FileCommands.SelectedModule, Mode=TwoWay}"
                                         Background="{DynamicResource ControlBackgroundBrush}"
                                         BorderBrush="{DynamicResource ControlBorderBrush}"
                                         BorderThickness="1"
                                         Foreground="{DynamicResource TextPrimaryBrush}"
                                         Height="220">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Image Source="{Binding ModuleIcon}" Width="16" Height="16" Margin="0,0,8,0"/>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding ModuleName}" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding ModuleVersion}" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                </StackPanel>
                                                <Ellipse Grid.Column="2" Width="10" Height="10" Fill="{DynamicResource AccentBrush}"
                                                         Visibility="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}, Converter={StaticResource BoolToVisibility}}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                <Button Content="Create" Width="120" Margin="0,12,0,0" 
                                        Command="{Binding FileCommands.NewCommand}" 
                                        IsEnabled="{Binding FileCommands.SelectedModule, Converter={StaticResource NullToBooleanConverter}}"/>
                            </StackPanel>
                        </fluent:BackstageTabItem>
                        <fluent:BackstageTabItem Header="Open">
                            <!-- Replace previous inline Open content with dedicated view for stepwise implementation -->
                            <viewsBackstage:OpenBackstageView DataContext="{Binding OpenBackstage}"/>
                        </fluent:BackstageTabItem>
                        <fluent:Button Header="Save" 
                                     Command="{Binding FileCommands.SaveCommand}"/>
                        <fluent:Button Header="Save As..." 
                                     Command="{Binding FileCommands.SaveAsCommand}"/>
                        <fluent:Button Header="Options..." 
                                     Command="{Binding OpenSettingsCommand}"/>
                        <fluent:Button Header="Exit" 
                                     Command="{Binding ExitCommand}"/>
                    </fluent:BackstageTabControl>
                </fluent:Backstage>
            </fluent:Ribbon.Menu>

            <!-- Home Tab -->
            <fluent:RibbonTabItem Header="Home">
                <fluent:RibbonGroupBox Header="File">
                    <fluent:Button Header="New" 
                                 SizeDefinition="Large" Command="{Binding FileCommands.NewCommand}">
                        <fluent:Button.Icon>
                            <TextBlock Text="&#xE7C3;" FontFamily="Segoe MDL2 Assets" FontSize="26" Foreground="{DynamicResource TextPrimaryBrush}" />
                        </fluent:Button.Icon>
                    </fluent:Button>
                    <fluent:Button Header="Open" 
                                 SizeDefinition="Large" Command="{Binding FileCommands.OpenCommand}">
                        <fluent:Button.Icon>
                            <TextBlock Text="&#xE8E5;" FontFamily="Segoe MDL2 Assets" FontSize="26" Foreground="{DynamicResource TextPrimaryBrush}" />
                        </fluent:Button.Icon>
                    </fluent:Button>
                    <fluent:Button Header="Save" 
                                 SizeDefinition="Large" Command="{Binding FileCommands.SaveCommand}">
                        <fluent:Button.Icon>
                            <TextBlock Text="&#xE74E;" FontFamily="Segoe MDL2 Assets" FontSize="26" Foreground="{DynamicResource TextPrimaryBrush}" />
                        </fluent:Button.Icon>
                    </fluent:Button>
                    <fluent:Button Header="Save As" 
                                 SizeDefinition="Large" Command="{Binding FileCommands.SaveAsCommand}">
                        <fluent:Button.Icon>
                            <TextBlock Text="&#xE792;" FontFamily="Segoe MDL2 Assets" FontSize="26" Foreground="{DynamicResource TextPrimaryBrush}" />
                        </fluent:Button.Icon>
                    </fluent:Button>
                    <fluent:Button Header="Close" Command="{Binding CloseActiveCommand}">
                        <fluent:Button.Icon>
                            <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="{DynamicResource TextPrimaryBrush}" />
                        </fluent:Button.Icon>
                    </fluent:Button>
                    <fluent:Button Header="Close Others" Command="{Binding CloseOthersCommand}">
                        <fluent:Button.Icon>
                            <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="{DynamicResource TextPrimaryBrush}" />
                        </fluent:Button.Icon>
                    </fluent:Button>
                    <fluent:Button Header="Close All" Command="{Binding CloseAllCommand}">
                        <fluent:Button.Icon>
                            <TextBlock Text="&#xE8BB;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="{DynamicResource TextPrimaryBrush}" />
                        </fluent:Button.Icon>
                    </fluent:Button>
                </fluent:RibbonGroupBox>
                
                <!-- Current Document: keep contextual operations only -->
                <fluent:RibbonGroupBox Header="Current Document">
                    <fluent:Button Header="Open Containing Folder" Command="{Binding OpenContainingFolderCommand}">
                        <fluent:Button.Icon>
                            <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="{DynamicResource TextPrimaryBrush}" />
                        </fluent:Button.Icon>
                    </fluent:Button>
                </fluent:RibbonGroupBox>
                
                <!-- Theme switching removed; now managed exclusively via Options dialog -->
            </fluent:RibbonTabItem>

            <!-- Help Tab -->
            <fluent:RibbonTabItem Header="Help">
                <fluent:RibbonGroupBox Header="Support">
                    <fluent:Button Header="Help" Command="{Binding OpenHelpCommand}">
                        <fluent:Button.Icon>
                            <TextBlock Text="&#xE897;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="{DynamicResource TextPrimaryBrush}" />
                        </fluent:Button.Icon>
                    </fluent:Button>
                    <fluent:Button Header="About" Command="{Binding OpenAboutCommand}">
                        <fluent:Button.Icon>
                            <TextBlock Text="&#xE946;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="{DynamicResource TextPrimaryBrush}" />
                        </fluent:Button.Icon>
                    </fluent:Button>
                </fluent:RibbonGroupBox>
                
                <!-- New group: System -->
                <fluent:RibbonGroupBox Header="System">
                    <fluent:Button Header="Open Logs Folder" Command="{Binding OpenLogsFolderCommand}">
                        <fluent:Button.Icon>
                            <TextBlock Text="&#xE8D5;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="{DynamicResource TextPrimaryBrush}" />
                        </fluent:Button.Icon>
                    </fluent:Button>
                    <fluent:Button Header="Open App Data Folder" Command="{Binding OpenAppDataFolderCommand}">
                        <fluent:Button.Icon>
                            <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="{DynamicResource TextPrimaryBrush}" />
                        </fluent:Button.Icon>
                    </fluent:Button>
                </fluent:RibbonGroupBox>
                
                <!-- New group: Settings -->
                <fluent:RibbonGroupBox Header="Settings">
                    <fluent:Button Header="Import Settings" Command="{Binding ImportSettingsCommand}">
                        <fluent:Button.Icon>
                            <TextBlock Text="&#xE898;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="{DynamicResource TextPrimaryBrush}" />
                        </fluent:Button.Icon>
                    </fluent:Button>
                    <fluent:Button Header="Export Settings" Command="{Binding ExportSettingsCommand}">
                        <fluent:Button.Icon>
                            <TextBlock Text="&#xE89A;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="{DynamicResource TextPrimaryBrush}" />
                        </fluent:Button.Icon>
                    </fluent:Button>
                </fluent:RibbonGroupBox>
            </fluent:RibbonTabItem>
        </fluent:Ribbon>

        <!-- Main Content Area with Vertical Tab Strip -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Vertical Tab Strip Panel (Left Side) -->
            <!-- CROSS-MODULE EDIT: 2025-01-20 Vertical File Tab System -->
            <!-- Modified for: Replace old DocumentTabControl with new grouped file tab UI -->
            <!-- Related modules: Shell (FileTabManagerViewModel) -->
            <!-- Rollback instructions: Restore old DocumentTabControl binding to Documents collection -->
            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- File Tab List (Collapsible) -->
                <Border Grid.Column="0"
                        Background="{DynamicResource SecondaryBackgroundBrush}"
                        BorderBrush="{DynamicResource ControlBorderBrush}"
                        BorderThickness="0,0,1,0"
                        Width="220"
                        Visibility="{Binding IsFileTabStripVisible, Converter={StaticResource BoolToVisibility}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header with toggle button -->
                        <Border Grid.Row="0"
                                Background="{DynamicResource SecondaryBackgroundBrush}"
                                BorderBrush="{DynamicResource ControlBorderBrush}"
                                BorderThickness="0,0,0,1"
                                Height="32">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- "Recent Files" text (rotated vertical would go here if needed) -->
                                <TextBlock Grid.Column="0"
                                           Text="Open Files"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="12,0,0,0"/>
                                
                                <!-- Toggle Button -->
                                <Button Grid.Column="1"
                                        Content="{Binding FileTabStripChevronGlyph}" 
                                        FontFamily="Segoe MDL2 Assets"
                                        FontSize="12"
                                        ToolTip="{Binding FileTabStripToggleTooltip}"
                                        Command="{Binding ToggleFileTabStripCommand}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="{DynamicResource TextPrimaryBrush}"
                                        Padding="8,4"
                                        Margin="0,0,4,0"
                                        Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                BorderThickness="0"
                                                                Padding="{TemplateBinding Padding}"
                                                                CornerRadius="2">
                                                            <TextBlock Text="{TemplateBinding Content}"
                                                                       FontFamily="{TemplateBinding FontFamily}"
                                                                       FontSize="{TemplateBinding FontSize}"
                                                                       Foreground="{TemplateBinding Foreground}"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </Border>
                        
                        <!-- File Tab ScrollViewer -->
                        <ScrollViewer Grid.Row="1"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding FileTabManager.FileTabItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <ContentControl Content="{Binding}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
                
                <!-- Show/Hide Tab Button (when hidden) -->
                <Border Grid.Column="1"
                        Background="{DynamicResource SecondaryBackgroundBrush}"
                        BorderBrush="{DynamicResource ControlBorderBrush}"
                        BorderThickness="0,0,1,0"
                        Width="32"
                        Visibility="{Binding IsFileTabStripVisible, Converter={StaticResource InverseBoolToVisibility}}">
                    <Button Content="{Binding FileTabStripChevronGlyph}"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="12"
                            ToolTip="{Binding FileTabStripToggleTooltip}"
                            Command="{Binding ToggleFileTabStripCommand}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Margin="0,8,0,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            Padding="4"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderThickness="0"
                                                    Padding="{TemplateBinding Padding}"
                                                    CornerRadius="2">
                                                <TextBlock Text="{TemplateBinding Content}"
                                                           FontFamily="{TemplateBinding FontFamily}"
                                                           FontSize="{TemplateBinding FontSize}"
                                                           Foreground="{TemplateBinding Foreground}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>
            </Grid>

            <!-- Document Content Area -->
            <Grid Grid.Column="1" 
                  MinWidth="0"
                  Background="{DynamicResource PrimaryBackgroundBrush}">
                <!-- Welcome Screen (shown when no documents open OR Welcome tab is active) -->
                <Border Visibility="{Binding FileTabManager.IsWelcomeTabActive, Converter={StaticResource BoolToVisibility}}">
                    <StackPanel HorizontalAlignment="Center" 
                              VerticalAlignment="Center">
                        <TextBlock Text="Welcome to EasyAF v3" 
                                 FontSize="32" 
                                 FontWeight="Light"
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,20"/>
                        
                        <TextBlock Text="Get started by creating or opening a document" 
                                 FontSize="16" 
                                 Foreground="{DynamicResource TextSecondaryBrush}"
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,40"/>

                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Center">
                            <Button Content="Create New" 
                                  Style="{StaticResource AccentButtonStyle}"
                                  Margin="10,0"
                                  Command="{Binding FileCommands.NewCommand}"/>

                            <Button Content="Open Existing" 
                                  Padding="20,10"
                                  Margin="10,0"
                                  FontSize="14"
                                  Cursor="Hand"
                                  Command="{Binding FileCommands.OpenCommand}"/>
                        </StackPanel>

                        <!-- Recent Files Section -->
                        <Border Margin="0,40,0,0"
                              Padding="20"
                              Background="{DynamicResource SecondaryBackgroundBrush}"
                              BorderBrush="{DynamicResource ControlBorderBrush}"
                              BorderThickness="1"
                              CornerRadius="4"
                              MinWidth="400">
                            <StackPanel>
                                <TextBlock Text="Recent Files" 
                                         FontSize="14" 
                                         FontWeight="SemiBold"
                                         Foreground="{DynamicResource TextPrimaryBrush}"
                                         Margin="0,0,0,10"/>
                                <!-- CROSS-MODULE EDIT: 2025-01-11 Task 10 -->
                                <!-- Modified for: Polish recent files UX with filename/directory display -->
                                <!-- Related modules: Shell (Converters) -->
                                <!-- Rollback instructions: Restore simple button display with full path as Content -->
                                <ItemsControl ItemsSource="{Binding FileCommands.RecentFiles}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- File Button -->
                                                <Button Grid.Column="0"
                                                        Command="{Binding DataContext.FileCommands.OpenRecentCommand, RelativeSource={RelativeSource AncestorType=fluent:RibbonWindow}}"
                                                        CommandParameter="{Binding}"
                                                        HorizontalContentAlignment="Left"
                                                        Padding="8"
                                                        Margin="0,2,0,0">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" 
                                                                   Text="📄" 
                                                                   FontSize="16" 
                                                                   Margin="0,0,8,0"
                                                                   VerticalAlignment="Center"/>
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="{Binding Converter={StaticResource PathToFileNameConverter}}" 
                                                                       FontWeight="SemiBold"
                                                                       TextTrimming="CharacterEllipsis"/>
                                                            <TextBlock Text="{Binding Converter={StaticResource PathToDirectoryConverter}}" 
                                                                       FontSize="10"
                                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                                       TextTrimming="CharacterEllipsis"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Button>
                                                
                                                <!-- Remove Button (X) - appears on hover -->
                                                <Button Grid.Column="1"
                                                        Command="{Binding DataContext.FileCommands.RemoveRecentCommand, RelativeSource={RelativeSource AncestorType=fluent:RibbonWindow}}"
                                                        CommandParameter="{Binding}"
                                                        Width="24"
                                                        Height="24"
                                                        Padding="0"
                                                        Margin="4,2,0,0"
                                                        VerticalAlignment="Center"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        FontFamily="Segoe MDL2 Assets"
                                                        FontSize="12"
                                                        Content="&#xE711;"
                                                        Cursor="Hand"
                                                        ToolTip="Remove from recent files">
                                                    <Button.Visibility>
                                                        <Binding Path="IsMouseOver" RelativeSource="{RelativeSource AncestorType=Grid}">
                                                            <Binding.Converter>
                                                                <BooleanToVisibilityConverter/>
                                                            </Binding.Converter>
                                                        </Binding>
                                                    </Button.Visibility>
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}"
                                                                                BorderThickness="0"
                                                                                Padding="{TemplateBinding Padding}"
                                                                                CornerRadius="2">
                                                                            <TextBlock Text="{TemplateBinding Content}"
                                                                                       FontFamily="{TemplateBinding FontFamily}"
                                                                                       FontSize="{TemplateBinding FontSize}"
                                                                                       Foreground="{TemplateBinding Foreground}"
                                                                                       HorizontalAlignment="Center"
                                                                                       VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Foreground" Value="#E81123"/>
                                                                    <Setter Property="Background" Value="#22E81123"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <TextBlock Text="No recent files" 
                                         FontSize="12" 
                                         Foreground="{DynamicResource TextSecondaryBrush}"
                                         FontStyle="Italic"
                                         Visibility="{Binding FileCommands.RecentFiles.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Document Content Container (will be populated by document tabs) -->
                <ContentControl x:Name="DocumentContentContainer"
                              Content="{Binding SelectedDocument.ViewModel}"
                              HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              VerticalContentAlignment="Stretch"
                              Visibility="{Binding FileTabManager.IsWelcomeTabActive, Converter={StaticResource InverseBoolToVisibility}}"/>
            </Grid>
        </Grid>

        <!-- Status Bar with Log Viewer -->
        <Expander Grid.Row="2" 
                  Header="Application Log"
                  IsExpanded="False"
                  Background="{DynamicResource SecondaryBackgroundBrush}"
                  BorderBrush="{DynamicResource ControlBorderBrush}"
                  BorderThickness="0,1,0,0">
            <Expander.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" 
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             FontWeight="SemiBold"
                             Padding="4"/>
                </DataTemplate>
            </Expander.HeaderTemplate>
            <views:LogViewer Height="150" DataContext="{Binding LogViewerViewModel}"/>
        </Expander>
    </Grid>
</fluent:RibbonWindow>
