<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:behaviors="clr-namespace:EasyAF.Shell.Behaviors">
    
    <!-- CROSS-MODULE EDIT: 2025-01-15 MVVM Optimization (2/4) -->
    <!-- Modified for: Extract Recent Files tab template from OpenBackstageView.xaml -->
    <!-- Rollback instructions: Merge back into OpenBackstageView.xaml DataTrigger for Recent mode -->
    
    <!-- Recent Files Tab Template -->
    <DataTemplate x:Key="RecentFilesTabTemplate">
        <!-- Drag & Drop: Drag files to Quick Access to add parent folder -->
        <ListView Background="Transparent"
                  BorderThickness="0"
                  ItemsSource="{Binding Source={StaticResource GroupedRecentFiles}}"
                  behaviors:DragToQuickAccessBehavior.IsEnabled="True"
                  behaviors:DragToQuickAccessBehavior.QuickAccessTarget="{Binding ElementName=QuickAccessItemsControl, Source={RelativeSource AncestorType=UserControl}}">
            
            <!-- Keyboard shortcuts for Recent Files ListView -->
            <ListView.InputBindings>
                <!-- Enter: Open selected file -->
                <KeyBinding Key="Return"
                            Command="{Binding OpenFileCommand}"
                            CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=ListView}}"/>
                <!-- Delete: Remove selected file from list -->
                <KeyBinding Key="Delete"
                            Command="{Binding RemoveFromListCommand}"
                            CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=ListView}}"/>
            </ListView.InputBindings>
            
            <!-- Group Headers -->
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" 
                                       FontWeight="SemiBold"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       Margin="0,12,0,4"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>
            
            <!-- Context Menu -->
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Open" 
                              Command="{Binding PlacementTarget.DataContext.OpenFileCommand, 
                                        RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                              CommandParameter="{Binding PlacementTarget.SelectedItem, 
                                                 RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                        <MenuItem.Icon>
                            <TextBlock Text="&#xE8E5;" FontFamily="Segoe MDL2 Assets"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Show in Explorer" 
                              Command="{Binding PlacementTarget.DataContext.OpenFileLocationCommand, 
                                        RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                              CommandParameter="{Binding PlacementTarget.SelectedItem, 
                                                 RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                        <MenuItem.Icon>
                            <TextBlock Text="&#xEC50;" FontFamily="Segoe MDL2 Assets"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Copy Path" 
                              Command="{Binding PlacementTarget.DataContext.CopyPathCommand, 
                                        RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                              CommandParameter="{Binding PlacementTarget.SelectedItem, 
                                                 RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                        <MenuItem.Icon>
                            <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="Pin to top" 
                              Command="{Binding PlacementTarget.DataContext.TogglePinCommand, 
                                        RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                              CommandParameter="{Binding PlacementTarget.SelectedItem, 
                                                 RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                        <MenuItem.Icon>
                            <TextBlock Text="&#xE840;" FontFamily="Segoe MDL2 Assets"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Add folder to Quick Access" 
                              Command="{Binding PlacementTarget.DataContext.AddToQuickAccessCommand, 
                                        RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                              CommandParameter="{Binding PlacementTarget.SelectedItem.DirectoryPath, 
                                                 RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                        <MenuItem.Icon>
                            <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Remove from list"
                              Command="{Binding PlacementTarget.DataContext.RemoveFromListCommand, 
                                        RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                              CommandParameter="{Binding PlacementTarget.SelectedItem, 
                                                 RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                        <MenuItem.Icon>
                            <TextBlock Text="&#xE738;" FontFamily="Segoe MDL2 Assets"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </ListView.ContextMenu>
            
            <!-- GridView Columns -->
            <ListView.View>
                <GridView>
                    <!-- Icon Column -->
                    <GridViewColumn Width="40">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="&#xE8A5;" 
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="20"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <!-- Name Column (two-line) -->
                    <GridViewColumn Width="320" Header="Name">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="{Binding FileName}" 
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <TextBlock Text="{Binding DirectoryPath}" 
                                               FontSize="11"
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <!-- Star Column -->
                    <GridViewColumn Width="30">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding IsPinned, Converter={StaticResource PinnedToStarGlyphConverter}}" 
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="16"
                                           Foreground="{Binding IsPinned, Converter={StaticResource PinnedToColorConverter}}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Cursor="Hand">
                                    <TextBlock.InputBindings>
                                        <MouseBinding MouseAction="LeftClick"
                                                      Command="{Binding DataContext.TogglePinCommand, 
                                                                RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      CommandParameter="{Binding}"/>
                                    </TextBlock.InputBindings>
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <!-- Date Modified Column -->
                    <GridViewColumn Width="120" Header="Date modified">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding LastModifiedDisplay}" 
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
            
            <!-- Item Container Style -->
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="MinHeight" Value="52"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Border x:Name="ItemBorder"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="Transparent"
                                        BorderThickness="0"
                                        Padding="{TemplateBinding Padding}">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftDoubleClick"
                                                      Command="{Binding DataContext.OpenFileCommand, 
                                                                RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      CommandParameter="{Binding}"/>
                                    </Border.InputBindings>
                                    <GridViewRowPresenter VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource HighlightSelectionBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource HighlightSelectionBrush}"/>
                                        <Setter TargetName="ItemBorder" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                        <Setter TargetName="ItemBorder" Property="BorderThickness" Value="2,0,0,0"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </DataTemplate>
    
</ResourceDictionary>
