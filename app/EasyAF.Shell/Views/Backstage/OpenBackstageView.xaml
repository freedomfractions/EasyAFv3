<UserControl x:Class="EasyAF.Shell.Views.Backstage.OpenBackstageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             xmlns:behaviors="clr-namespace:EasyAF.Shell.Behaviors"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="700"
             Background="{DynamicResource PrimaryBackgroundBrush}"
             Focusable="True"
             x:Name="BackstageRoot">
    
    <!-- Keyboard Shortcuts: Ctrl+F (focus search), Enter (open selected), Delete (remove selected) -->
    <UserControl.InputBindings>
        <KeyBinding Key="F" Modifiers="Control" 
                    Command="{Binding FocusSearchCommand}"/>
    </UserControl.InputBindings>
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/BackstageConverters.xaml"/>
                <ResourceDictionary Source="Resources/RecentFilesTabTemplate.xaml"/>
                <ResourceDictionary Source="Resources/RecentFoldersTabTemplate.xaml"/>
                <ResourceDictionary Source="Resources/QuickAccessBrowserTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- CollectionViewSource for grouped Recent Files -->
            <CollectionViewSource x:Key="GroupedRecentFiles" Source="{Binding RecentFiles}">
                <CollectionViewSource.GroupDescriptions>
                    <PropertyGroupDescription PropertyName="DateCategory"/>
                </CollectionViewSource.GroupDescriptions>
                <CollectionViewSource.SortDescriptions>
                    <!-- Sort by category priority first (Pinned=0, Today=1, etc.) -->
                    <scm:SortDescription PropertyName="DateCategorySortPriority" Direction="Ascending"/>
                    <!-- Then sort within groups by LastModified descending (newest first) -->
                    <scm:SortDescription PropertyName="LastModified" Direction="Descending"/>
                </CollectionViewSource.SortDescriptions>
            </CollectionViewSource>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Overall Header -->
        <TextBlock Grid.Row="0"
                   Text="Open existing document"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   Margin="0,0,0,16"/>

        <!-- Columns -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left column: navigation -->
            <StackPanel Grid.Column="0">
                <!-- Recent Files -->
                <RadioButton x:Name="RecentButton"
                             GroupName="NavMode"
                             Style="{StaticResource NavigationRadioButtonStyle}"
                             IsChecked="True"
                             Command="{Binding SelectRecentCommand}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE81C;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   FontSize="14"
                                   Margin="0,0,8,0" 
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Recent Files" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

                <Border Height="1" Margin="0,8"
                        Background="{DynamicResource SeparatorBrush}"/>

                <!-- Quick Access Section Header -->
                <TextBlock Text="QUICK ACCESS" 
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           FontSize="11"
                           FontWeight="SemiBold"
                           Margin="10,8,10,6"/>

                <!-- Quick Access Folders (data-bound) -->
                <!-- Drag & Drop: Drag WITHIN Quick Access to reorder -->
                <ItemsControl x:Name="QuickAccessItemsControl"
                              ItemsSource="{Binding QuickAccessFolders}"
                              behaviors:QuickAccessDragBehavior.IsEnabled="True">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <RadioButton GroupName="NavMode"
                                         Style="{StaticResource NavigationRadioButtonStyle}"
                                         IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                         Command="{Binding DataContext.SelectQuickAccessFolderCommand, 
                                                   RelativeSource={RelativeSource AncestorType=UserControl}}"
                                         CommandParameter="{Binding}"
                                         Tag="{Binding DataContext.RemoveFromQuickAccessCommand, 
                                               RelativeSource={RelativeSource AncestorType=UserControl}}">
                                <RadioButton.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Remove from Quick Access"
                                                  Command="{Binding Path=PlacementTarget.Tag, 
                                                            RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                  CommandParameter="{Binding}">
                                            <MenuItem.Icon>
                                                <TextBlock Text="&#xE738;" FontFamily="Segoe MDL2 Assets"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </ContextMenu>
                                </RadioButton.ContextMenu>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding IconGlyph}" 
                                               FontFamily="Segoe MDL2 Assets" 
                                               FontSize="14"
                                                Margin="0,0,8,0" 
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding FolderName}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </RadioButton>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Empty state (when no Quick Access folders) -->
                <TextBlock Text="(No Quick Access Locations)"
                           Foreground="{DynamicResource TextTertiaryBrush}"
                           FontSize="11"
                           FontStyle="Italic"
                           Margin="10,4"
                           Visibility="{Binding QuickAccessFolders.Count, 
                                        Converter={StaticResource ZeroToVisibilityConverter}}"/>

                <Border Height="1" Margin="0,8"
                        Background="{DynamicResource SeparatorBrush}"/>

                <!-- Browse Button -->
                <Button x:Name="BrowseButton"
                        Style="{StaticResource BaseButtonStyle}"
                        Command="{Binding BrowseCommand}"
                        Padding="8,6">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE8E5;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   FontSize="14"
                                   Margin="0,0,8,0" 
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Browse..." VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Vertical separator with roominess -->
            <Border Grid.Column="1"
                    Width="1"
                    Margin="16,0"
                    Background="{DynamicResource ControlBorderBrush}"/>

            <!-- Right column: search + scrollable content -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search Bar with TextBox -->
                <Border Grid.Row="0"
                        Background="{DynamicResource ControlBackgroundBrush}"
                        BorderBrush="{DynamicResource ControlBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="8,6"
                        Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Magnifying Glass Icon -->
                        <TextBlock Grid.Column="0" 
                                   Text="&#xE721;" 
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="14"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,0,8,0" 
                                   VerticalAlignment="Center"/>
                        
                        <!-- Search TextBox -->
                        <TextBox x:Name="SearchTextBox"
                                 Grid.Column="1" 
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 VerticalAlignment="Center"
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 CaretBrush="{DynamicResource TextPrimaryBrush}">
                            <TextBox.Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Grid>
                                                    <!-- Placeholder using TextBox for identical rendering -->
                                                    <TextBox Text="Search"
                                                             Foreground="{DynamicResource TextSecondaryBrush}"
                                                             Background="Transparent"
                                                             BorderThickness="0"
                                                             IsHitTestVisible="False"
                                                             IsTabStop="False"
                                                             Focusable="False"
                                                             Visibility="Collapsed"
                                                             x:Name="PlaceholderText"/>
                                                    <!-- Actual text input -->
                                                    <ScrollViewer x:Name="PART_ContentHost" 
                                                                  Padding="0"/>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="Text" Value="">
                                                        <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Grid>
                </Border>

                <!-- Navigation Bar for Browser Mode -->
                <Border Grid.Row="1"
                        Background="{DynamicResource ControlBackgroundBrush}"
                        BorderBrush="{DynamicResource ControlBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="8,6"
                        Margin="0,0,0,12">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Mode}" Value="QuickAccessFolder">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Up Button -->
                        <Button Grid.Column="0"
                                Command="{Binding NavigateUpCommand}"
                                Style="{StaticResource BaseButtonStyle}"
                                Padding="8,4"
                                Margin="0,0,8,0"
                                ToolTip="Navigate to parent folder">
                            <TextBlock Text="&#xE74A;" 
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="14"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </Button>
                        
                        <!-- Current Path Display -->
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding CurrentBrowsePath}"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   FontWeight="SemiBold"
                                   TextTrimming="CharacterEllipsis"/>
                    </Grid>
                </Border>

                <!-- Scrollable Content Host -->                <ContentControl x:Name="ContentHost" Grid.Row="2">
                        <!-- Content switches based on Mode -->
                        <ContentControl.Style>
                            <Style TargetType="ContentControl">
                                <Style.Triggers>
                                    <!-- Recent Mode: Show TabControl -->
                                    <DataTrigger Binding="{Binding Mode}" Value="Recent">
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <TabControl SelectedIndex="{Binding RecentTab, Converter={StaticResource RecentTabToIndexConverter}}">
                                                    <TabItem Header="Files" ContentTemplate="{StaticResource RecentFilesTabTemplate}"/>
                                                    <TabItem Header="Folders" ContentTemplate="{StaticResource RecentFoldersTabTemplate}"/>
                                                </TabControl>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <!-- QuickAccessFolder Mode: File Browser -->
                                    <DataTrigger Binding="{Binding Mode}" Value="QuickAccessFolder">
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <ContentControl ContentTemplate="{StaticResource QuickAccessBrowserTemplate}"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                    </ContentControl>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
