<UserControl x:Class="EasyAF.Shell.Views.Backstage.OpenBackstageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:EasyAF.Shell.Converters"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="700"
             Background="{DynamicResource PrimaryBackgroundBrush}"
             Focusable="True"
             x:Name="BackstageRoot">
    
    <!-- Keyboard Shortcuts: Ctrl+F (focus search), Enter (open selected), Delete (remove selected) -->
    <UserControl.InputBindings>
        <KeyBinding Key="F" Modifiers="Control" 
                    Command="{Binding FocusSearchCommand}"/>
    </UserControl.InputBindings>
    
    <UserControl.Resources>
        <conv:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter" />
        <conv:RecentTabToIndexConverter x:Key="RecentTabToIndexConverter" />
        <conv:PinnedToStarGlyphConverter x:Key="PinnedToStarGlyphConverter" />
        <conv:PinnedToColorConverter x:Key="PinnedToColorConverter" />
        
        <!-- CollectionViewSource for grouped Recent Files -->
        <CollectionViewSource x:Key="GroupedRecentFiles" Source="{Binding RecentFiles}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="DateCategory"/>
            </CollectionViewSource.GroupDescriptions>
            <CollectionViewSource.SortDescriptions>
                <!-- Sort by category priority first (Pinned=0, Today=1, etc.) -->
                <scm:SortDescription PropertyName="DateCategorySortPriority" Direction="Ascending"/>
                <!-- Then sort within groups by LastModified descending (newest first) -->
                <scm:SortDescription PropertyName="LastModified" Direction="Descending"/>
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Overall Header -->
        <TextBlock Grid.Row="0"
                   Text="Open existing document"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   Margin="0,0,0,16"/>

        <!-- Columns -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left column: navigation -->
            <StackPanel Grid.Column="0">
                <!-- Recent Files -->
                <RadioButton x:Name="RecentButton"
                             GroupName="NavMode"
                             Style="{StaticResource NavigationRadioButtonStyle}"
                             IsChecked="True"
                             Command="{Binding SelectRecentCommand}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE81C;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   FontSize="14"
                                   Margin="0,0,8,0" 
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Recent Files" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

                <Border Height="1" Margin="0,8"
                        Background="{DynamicResource SeparatorBrush}"/>

                <!-- Quick Access Section Header -->
                <TextBlock Text="QUICK ACCESS" 
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           FontSize="11"
                           FontWeight="SemiBold"
                           Margin="10,8,10,6"/>

                <!-- Quick Access Folders (data-bound) -->
                <!-- TODO: Add drag & drop support for reordering Quick Access folders -->
                <ItemsControl ItemsSource="{Binding QuickAccessFolders}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <RadioButton GroupName="NavMode"
                                         Style="{StaticResource NavigationRadioButtonStyle}"
                                         Command="{Binding DataContext.SelectQuickAccessFolderCommand, 
                                                   RelativeSource={RelativeSource AncestorType=UserControl}}"
                                         CommandParameter="{Binding}"
                                         Tag="{Binding DataContext.RemoveFromQuickAccessCommand, 
                                               RelativeSource={RelativeSource AncestorType=UserControl}}">
                                <RadioButton.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Remove from Quick Access"
                                                  Command="{Binding Path=PlacementTarget.Tag, 
                                                            RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                  CommandParameter="{Binding}">
                                            <MenuItem.Icon>
                                                <TextBlock Text="&#xE738;" FontFamily="Segoe MDL2 Assets"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </ContextMenu>
                                </RadioButton.ContextMenu>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding IconGlyph}" 
                                               FontFamily="Segoe MDL2 Assets" 
                                               FontSize="14"
                                                Margin="0,0,8,0" 
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding FolderName}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </RadioButton>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Empty state (when no Quick Access folders) -->
                <TextBlock Text="(No Quick Access Locations)"
                           Foreground="{DynamicResource TextTertiaryBrush}"
                           FontSize="11"
                           FontStyle="Italic"
                           Margin="10,4"
                           Visibility="{Binding QuickAccessFolders.Count, 
                                        Converter={StaticResource ZeroToVisibilityConverter}}"/>

                <Border Height="1" Margin="0,8"
                        Background="{DynamicResource SeparatorBrush}"/>

                <!-- Browse Button -->
                <Button x:Name="BrowseButton"
                        Style="{StaticResource BaseButtonStyle}"
                        Command="{Binding BrowseCommand}"
                        Padding="8,6">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE8E5;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   FontSize="14"
                                   Margin="0,0,8,0" 
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Browse..." VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Vertical separator with roominess -->
            <Border Grid.Column="1"
                    Width="1"
                    Margin="16,0"
                    Background="{DynamicResource ControlBorderBrush}"/>

            <!-- Right column: search + scrollable content -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search Bar with TextBox -->
                <Border Grid.Row="0"
                        Background="{DynamicResource ControlBackgroundBrush}"
                        BorderBrush="{DynamicResource ControlBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="8,6"
                        Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Magnifying Glass Icon -->
                        <TextBlock Grid.Column="0" 
                                   Text="&#xE721;" 
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="14"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,0,8,0" 
                                   VerticalAlignment="Center"/>
                        
                        <!-- Search TextBox -->
                        <TextBox x:Name="SearchTextBox"
                                 Grid.Column="1" 
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 VerticalAlignment="Center"
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 CaretBrush="{DynamicResource TextPrimaryBrush}">
                            <TextBox.Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Grid>
                                                    <!-- Placeholder using TextBox for identical rendering -->
                                                    <TextBox Text="Search"
                                                             Foreground="{DynamicResource TextSecondaryBrush}"
                                                             Background="Transparent"
                                                             BorderThickness="0"
                                                             IsHitTestVisible="False"
                                                             IsTabStop="False"
                                                             Focusable="False"
                                                             Visibility="Collapsed"
                                                             x:Name="PlaceholderText"/>
                                                    <!-- Actual text input -->
                                                    <ScrollViewer x:Name="PART_ContentHost" 
                                                                  Padding="0"/>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="Text" Value="">
                                                        <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Grid>
                </Border>

                <!-- Navigation Bar for Browser Mode -->
                <Border Grid.Row="1"
                        Background="{DynamicResource ControlBackgroundBrush}"
                        BorderBrush="{DynamicResource ControlBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="8,6"
                        Margin="0,0,0,12">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Mode}" Value="QuickAccessFolder">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Up Button -->
                        <Button Grid.Column="0"
                                Command="{Binding NavigateUpCommand}"
                                Style="{StaticResource BaseButtonStyle}"
                                Padding="8,4"
                                Margin="0,0,8,0"
                                ToolTip="Navigate to parent folder">
                            <TextBlock Text="&#xE74A;" 
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="14"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </Button>
                        
                        <!-- Current Path Display -->
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding CurrentBrowsePath}"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   FontWeight="SemiBold"
                                   TextTrimming="CharacterEllipsis"/>
                    </Grid>
                </Border>

                <!-- Scrollable Content Host -->
                <ScrollViewer Grid.Row="2"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <ContentControl x:Name="ContentHost">
                        <!-- Content switches based on Mode -->
                        <ContentControl.Style>
                            <Style TargetType="ContentControl">
                                <Style.Triggers>
                                    <!-- Recent Mode: Show TabControl -->
                                    <DataTrigger Binding="{Binding Mode}" Value="Recent">
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <TabControl SelectedIndex="{Binding RecentTab, Converter={StaticResource RecentTabToIndexConverter}}">
                                                    <TabItem Header="Files">
                                                        <!-- TODO: Add drag & drop support for dragging files to Quick Access or external apps -->
                                                        <ListView Background="Transparent"
                                                                  BorderThickness="0"
                                                                  ItemsSource="{Binding Source={StaticResource GroupedRecentFiles}}">
                                                            <!-- Keyboard shortcuts for Recent Files ListView -->
                                                            <ListView.InputBindings>
                                                                <!-- Enter: Open selected file -->
                                                                <KeyBinding Key="Return"
                                                                            Command="{Binding OpenFileCommand}"
                                                                            CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=ListView}}"/>
                                                                <!-- Delete: Remove selected file from list -->
                                                                <KeyBinding Key="Delete"
                                                                            Command="{Binding RemoveFromListCommand}"
                                                                            CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=ListView}}"/>
                                                            </ListView.InputBindings>
                                                            <ListView.GroupStyle>
                                                                <GroupStyle>
                                                                    <GroupStyle.HeaderTemplate>
                                                                        <DataTemplate>
                                                                            <TextBlock Text="{Binding Name}" 
                                                                                       FontWeight="SemiBold"
                                                                                       FontSize="13"
                                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                                       Margin="0,12,0,4"/>
                                                                        </DataTemplate>
                                                                    </GroupStyle.HeaderTemplate>
                                                                </GroupStyle>
                                                            </ListView.GroupStyle>
                                                            <ListView.ContextMenu>
                                                                <ContextMenu>
                                                                    <MenuItem Header="Open" 
                                                                              Command="{Binding PlacementTarget.DataContext.OpenFileCommand, 
                                                                                        RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                                              CommandParameter="{Binding PlacementTarget.SelectedItem, 
                                                                                                 RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                                        <MenuItem.Icon>
                                                                            <TextBlock Text="&#xE8E5;" FontFamily="Segoe MDL2 Assets"/>
                                                                        </MenuItem.Icon>
                                                                    </MenuItem>
                                                                    <MenuItem Header="Show in Explorer" 
                                                                              Command="{Binding PlacementTarget.DataContext.OpenFileLocationCommand, 
                                                                                        RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                                              CommandParameter="{Binding PlacementTarget.SelectedItem, 
                                                                                                 RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                                        <MenuItem.Icon>
                                                                            <TextBlock Text="&#xEC50;" FontFamily="Segoe MDL2 Assets"/>
                                                                        </MenuItem.Icon>
                                                                    </MenuItem>
                                                                    <MenuItem Header="Copy Path" 
                                                                              Command="{Binding PlacementTarget.DataContext.CopyPathCommand, 
                                                                                        RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                                              CommandParameter="{Binding PlacementTarget.SelectedItem, 
                                                                                                 RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                                        <MenuItem.Icon>
                                                                            <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets"/>
                                                                        </MenuItem.Icon>
                                                                    </MenuItem>
                                                                    <Separator/>
                                                                    <MenuItem Header="Pin to top" 
                                                                              Command="{Binding PlacementTarget.DataContext.TogglePinCommand, 
                                                                                        RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                                              CommandParameter="{Binding PlacementTarget.SelectedItem, 
                                                                                                 RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                                        <MenuItem.Icon>
                                                                            <TextBlock Text="&#xE840;" FontFamily="Segoe MDL2 Assets"/>
                                                                        </MenuItem.Icon>
                                                                    </MenuItem>
                                                                    <MenuItem Header="Add folder to Quick Access" 
                                                                              Command="{Binding PlacementTarget.DataContext.AddToQuickAccessCommand, 
                                                                                        RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                                              CommandParameter="{Binding PlacementTarget.SelectedItem.DirectoryPath, 
                                                                                                 RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                                        <MenuItem.Icon>
                                                                            <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets"/>
                                                                        </MenuItem.Icon>
                                                                    </MenuItem>
                                                                    <MenuItem Header="Remove from list"
                                                                              Command="{Binding PlacementTarget.DataContext.RemoveFromListCommand, 
                                                                                        RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                                              CommandParameter="{Binding PlacementTarget.SelectedItem, 
                                                                                                 RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                                        <MenuItem.Icon>
                                                                            <TextBlock Text="&#xE738;" FontFamily="Segoe MDL2 Assets"/>
                                                                        </MenuItem.Icon>
                                                                    </MenuItem>
                                                                </ContextMenu>
                                                            </ListView.ContextMenu>
                                                            <ListView.View>
                                                                <GridView>
                                                                    <!-- Icon Column -->
                                                                    <GridViewColumn Width="40">
                                                                        <GridViewColumn.CellTemplate>
                                                                            <DataTemplate>
                                                                                <TextBlock Text="&#xE8A5;" 
                                                                                           FontFamily="Segoe MDL2 Assets"
                                                                                           FontSize="20"
                                                                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                                                                           HorizontalAlignment="Center"
                                                                                           VerticalAlignment="Center"/>
                                                                            </DataTemplate>
                                                                        </GridViewColumn.CellTemplate>
                                                                    </GridViewColumn>
                                                                    <!-- Name Column (two-line) -->
                                                                    <GridViewColumn Width="320" Header="Name">
                                                                        <GridViewColumn.CellTemplate>
                                                                            <DataTemplate>
                                                                                <StackPanel VerticalAlignment="Center">
                                                                                    <TextBlock Text="{Binding FileName}" 
                                                                                               FontWeight="SemiBold"
                                                                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                                                    <TextBlock Text="{Binding DirectoryPath}" 
                                                                                               FontSize="11"
                                                                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                                                </StackPanel>
                                                                            </DataTemplate>
                                                                        </GridViewColumn.CellTemplate>
                                                                    </GridViewColumn>
                                                                    <!-- Star Column -->
                                                                    <GridViewColumn Width="30">
                                                                        <GridViewColumn.CellTemplate>
                                                                            <DataTemplate>
                                                                                <TextBlock Text="{Binding IsPinned, Converter={StaticResource PinnedToStarGlyphConverter}}" 
                                                                                           FontFamily="Segoe MDL2 Assets"
                                                                                           FontSize="16"
                                                                                           Foreground="{Binding IsPinned, Converter={StaticResource PinnedToColorConverter}}"
                                                                                           HorizontalAlignment="Center"
                                                                                           VerticalAlignment="Center"
                                                                                           Cursor="Hand">
                                                                                    <TextBlock.InputBindings>
                                                                                        <MouseBinding MouseAction="LeftClick"
                                                                                                      Command="{Binding DataContext.TogglePinCommand, 
                                                                                                                RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                                                      CommandParameter="{Binding}"/>
                                                                                    </TextBlock.InputBindings>
                                                                                </TextBlock>
                                                                            </DataTemplate>
                                                                        </GridViewColumn.CellTemplate>
                                                                    </GridViewColumn>
                                                                    <!-- Date Modified Column -->
                                                                    <GridViewColumn Width="120" Header="Date modified">
                                                                        <GridViewColumn.CellTemplate>
                                                                            <DataTemplate>
                                                                                <TextBlock Text="{Binding LastModifiedDisplay}" 
                                                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                                                           VerticalAlignment="Center"/>
                                                                            </DataTemplate>
                                                                        </GridViewColumn.CellTemplate>
                                                                    </GridViewColumn>
                                                                </GridView>
                                                            </ListView.View>
                                                            <ListView.ItemContainerStyle>
                                                                <Style TargetType="ListViewItem">
                                                                    <Setter Property="Background" Value="Transparent"/>
                                                                    <Setter Property="BorderThickness" Value="0"/>
                                                                    <Setter Property="Padding" Value="0"/>
                                                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                                    <Setter Property="MinHeight" Value="52"/>
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="ListViewItem">
                                                                                <Border x:Name="ItemBorder"
                                                                                        Background="{TemplateBinding Background}"
                                                                                        BorderBrush="Transparent"
                                                                                        BorderThickness="0"
                                                                                        Padding="{TemplateBinding Padding}">
                                                                                    <Border.InputBindings>
                                                                                        <MouseBinding MouseAction="LeftDoubleClick"
                                                                                                      Command="{Binding DataContext.OpenFileCommand, 
                                                                                                                RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                                                      CommandParameter="{Binding}"/>
                                                                                    </Border.InputBindings>
                                                                                    <GridViewRowPresenter VerticalAlignment="Center"/>
                                                                                </Border>
                                                                                <ControlTemplate.Triggers>
                                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                                        <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource HighlightSelectionBrush}"/>
                                                                                    </Trigger>
                                                                                    <Trigger Property="IsSelected" Value="True">
                                                                                        <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource HighlightSelectionBrush}"/>
                                                                                        <Setter TargetName="ItemBorder" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                                                                        <Setter TargetName="ItemBorder" Property="BorderThickness" Value="2,0,0,0"/>
                                                                                    </Trigger>
                                                                                </ControlTemplate.Triggers>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </ListView.ItemContainerStyle>
                                                        </ListView>
                                                    </TabItem>
                                                    <TabItem Header="Folders">
                                                        <ListView Background="Transparent"
                                                                  BorderThickness="0"
                                                                  ItemsSource="{Binding RecentFolders}">
                                                            <!-- Keyboard shortcuts for Recent Folders ListView -->
                                                            <ListView.InputBindings>
                                                                <!-- Enter: Open selected folder -->
                                                                <KeyBinding Key="Return"
                                                                            Command="{Binding OpenFolderCommand}"
                                                                            CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=ListView}}"/>
                                                                <!-- Delete: Remove selected folder from list -->
                                                                <KeyBinding Key="Delete"
                                                                            Command="{Binding RemoveFolderFromListCommand}"
                                                                            CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=ListView}}"/>
                                                            </ListView.InputBindings>
                                                            <ListView.ContextMenu>
                                                                <ContextMenu>
                                                                    <MenuItem Header="Open in File Browser" 
                                                                              Command="{Binding PlacementTarget.DataContext.OpenFolderCommand, 
                                                                                        RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                                              CommandParameter="{Binding PlacementTarget.SelectedItem, 
                                                                                                 RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                                        <MenuItem.Icon>
                                                                            <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets"/>
                                                                        </MenuItem.Icon>
                                                                    </MenuItem>
                                                                    <MenuItem Header="Copy Path" 
                                                                              Command="{Binding PlacementTarget.DataContext.CopyFolderPathCommand, 
                                                                                        RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                                              CommandParameter="{Binding PlacementTarget.SelectedItem, 
                                                                                                 RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                                        <MenuItem.Icon>
                                                                            <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets"/>
                                                                        </MenuItem.Icon>
                                                                    </MenuItem>
                                                                    <Separator/>
                                                                    <MenuItem Header="Add to Quick Access" 
                                                                              Command="{Binding PlacementTarget.DataContext.AddToQuickAccessCommand, 
                                                                                        RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                                              CommandParameter="{Binding PlacementTarget.SelectedItem.FolderPath, 
                                                                                                 RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                                        <MenuItem.Icon>
                                                                            <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets"/>
                                                                        </MenuItem.Icon>
                                                                    </MenuItem>
                                                                    <MenuItem Header="Remove from list" 
                                                                              Command="{Binding PlacementTarget.DataContext.RemoveFolderFromListCommand, 
                                                                                        RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                                              CommandParameter="{Binding PlacementTarget.SelectedItem, 
                                                                                                 RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                                        <MenuItem.Icon>
                                                                            <TextBlock Text="&#xE738;" FontFamily="Segoe MDL2 Assets"/>
                                                                        </MenuItem.Icon>
                                                                    </MenuItem>
                                                                </ContextMenu>
                                                            </ListView.ContextMenu>
                                                            <ListView.View>
                                                                <GridView>
                                                                    <!-- Icon Column -->
                                                                    <GridViewColumn Width="40">
                                                                        <GridViewColumn.CellTemplate>
                                                                            <DataTemplate>
                                                                                <TextBlock Text="&#xE8B7;" 
                                                                                           FontFamily="Segoe MDL2 Assets"
                                                                                           FontSize="20"
                                                                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                                                                           HorizontalAlignment="Center"
                                                                                           VerticalAlignment="Center"/>
                                                                            </DataTemplate>
                                                                        </GridViewColumn.CellTemplate>
                                                                    </GridViewColumn>
                                                                    <!-- Name Column (two-line) -->
                                                                    <GridViewColumn Width="350" Header="Name">
                                                                        <GridViewColumn.CellTemplate>
                                                                            <DataTemplate>
                                                                                <StackPanel VerticalAlignment="Center">
                                                                                    <TextBlock Text="{Binding FolderName}" 
                                                                                               FontWeight="SemiBold"
                                                                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                                                    <TextBlock Text="{Binding ParentPath}" 
                                                                                               FontSize="11"
                                                                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                                                </StackPanel>
                                                                            </DataTemplate>
                                                                        </GridViewColumn.CellTemplate>
                                                                    </GridViewColumn>
                                                                    <!-- Date Modified Column -->
                                                                    <GridViewColumn Width="120" Header="Date modified">
                                                                        <GridViewColumn.CellTemplate>
                                                                            <DataTemplate>
                                                                                <TextBlock Text="{Binding LastAccessedDisplay}" 
                                                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                                                           VerticalAlignment="Center"/>
                                                                            </DataTemplate>
                                                                        </GridViewColumn.CellTemplate>
                                                                    </GridViewColumn>
                                                                </GridView>
                                                            </ListView.View>
                                                            <ListView.ItemContainerStyle>
                                                                <Style TargetType="ListViewItem">
                                                                    <Setter Property="Background" Value="Transparent"/>
                                                                    <Setter Property="BorderThickness" Value="0"/>
                                                                    <Setter Property="Padding" Value="0"/>
                                                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                                    <Setter Property="MinHeight" Value="52"/>
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="ListViewItem">
                                                                                <Border x:Name="ItemBorder"
                                                                                        Background="{TemplateBinding Background}"
                                                                                        BorderBrush="Transparent"
                                                                                        BorderThickness="0"
                                                                                        Padding="{TemplateBinding Padding}">
                                                                                    <Border.InputBindings>
                                                                                        <MouseBinding MouseAction="LeftDoubleClick"
                                                                                                      Command="{Binding DataContext.OpenFolderCommand, 
                                                                                                                RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                                                      CommandParameter="{Binding}"/>
                                                                                    </Border.InputBindings>
                                                                                    <GridViewRowPresenter VerticalAlignment="Center"/>
                                                                                </Border>
                                                                                <ControlTemplate.Triggers>
                                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                                        <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource HighlightSelectionBrush}"/>
                                                                                    </Trigger>
                                                                                    <Trigger Property="IsSelected" Value="True">
                                                                                        <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource HighlightSelectionBrush}"/>
                                                                                        <Setter TargetName="ItemBorder" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                                                                        <Setter TargetName="ItemBorder" Property="BorderThickness" Value="2,0,0,0"/>
                                                                                    </Trigger>
                                                                                </ControlTemplate.Triggers>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </ListView.ItemContainerStyle>
                                                        </ListView>
                                                    </TabItem>
                                                </TabControl>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <!-- QuickAccessFolder Mode: File Browser -->
                                    <DataTrigger Binding="{Binding Mode}" Value="QuickAccessFolder">
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <ListView Background="Transparent"
                                                          BorderThickness="0"
                                                          ItemsSource="{Binding BrowserEntries}">
                                                    <!-- Keyboard shortcuts for Browser ListView -->
                                                    <ListView.InputBindings>
                                                        <!-- Enter: Open selected entry (file or folder) -->
                                                        <KeyBinding Key="Return"
                                                                    Command="{Binding OpenBrowserEntryCommand}"
                                                                    CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=ListView}}"/>
                                                    </ListView.InputBindings>
                                                    <ListView.ContextMenu>
                                                        <ContextMenu>
                                                            <MenuItem Header="Open" 
                                                                      Command="{Binding PlacementTarget.DataContext.OpenBrowserEntryCommand, 
                                                                                RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                                      CommandParameter="{Binding PlacementTarget.SelectedItem, 
                                                                                         RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                                <MenuItem.Icon>
                                                                    <TextBlock Text="&#xE8E5;" FontFamily="Segoe MDL2 Assets"/>
                                                                </MenuItem.Icon>
                                                            </MenuItem>
                                                            <MenuItem Header="Copy Path" 
                                                                      Command="{Binding PlacementTarget.DataContext.CopyBrowserPathCommand, 
                                                                                RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                                      CommandParameter="{Binding PlacementTarget.SelectedItem, 
                                                                                         RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                                <MenuItem.Icon>
                                                                    <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets"/>
                                                                </MenuItem.Icon>
                                                            </MenuItem>
                                                            <Separator/>
                                                            <MenuItem Header="Add folder to Quick Access" 
                                                                      Command="{Binding PlacementTarget.DataContext.AddToQuickAccessCommand, 
                                                                                RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                                      CommandParameter="{Binding PlacementTarget.SelectedItem.FullPath, 
                                                                                         RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                                <MenuItem.Icon>
                                                                    <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets"/>
                                                                </MenuItem.Icon>
                                                            </MenuItem>
                                                        </ContextMenu>
                                                    </ListView.ContextMenu>
                                                    <ListView.View>
                                                        <GridView>
                                                            <!-- Icon Column -->
                                                            <GridViewColumn Width="40">
                                                                <GridViewColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <TextBlock Text="{Binding Icon}" 
                                                                                   FontFamily="Segoe MDL2 Assets"
                                                                                   FontSize="20"
                                                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                                                   HorizontalAlignment="Center"
                                                                                   VerticalAlignment="Center"/>
                                                                    </DataTemplate>
                                                                </GridViewColumn.CellTemplate>
                                                            </GridViewColumn>
                                                            <!-- Name Column -->
                                                            <GridViewColumn Width="280" Header="Name">
                                                                <GridViewColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <StackPanel VerticalAlignment="Center">
                                                                            <TextBlock Text="{Binding Name}" 
                                                                                       FontWeight="SemiBold"
                                                                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                                            <TextBlock Text="{Binding DirectoryPath}" 
                                                                                       FontSize="11"
                                                                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                                        </StackPanel>
                                                                    </DataTemplate>
                                                                </GridViewColumn.CellTemplate>
                                                            </GridViewColumn>
                                                            <!-- File Size Column -->
                                                            <GridViewColumn Width="100" Header="Size">
                                                                <GridViewColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <TextBlock Text="{Binding FileSizeDisplay}" 
                                                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                                                   VerticalAlignment="Center"/>
                                                                    </DataTemplate>
                                                                </GridViewColumn.CellTemplate>
                                                            </GridViewColumn>
                                                            <!-- Date Modified Column -->
                                                            <GridViewColumn Width="90" Header="Modified">
                                                                <GridViewColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <TextBlock Text="{Binding LastModifiedDisplay}" 
                                                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                                                   VerticalAlignment="Center"/>
                                                                    </DataTemplate>
                                                                </GridViewColumn.CellTemplate>
                                                            </GridViewColumn>
                                                        </GridView>
                                                    </ListView.View>
                                                    <ListView.ItemContainerStyle>
                                                        <Style TargetType="ListViewItem">
                                                            <Setter Property="Background" Value="Transparent"/>
                                                            <Setter Property="BorderThickness" Value="0"/>
                                                            <Setter Property="Padding" Value="0"/>
                                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                            <Setter Property="MinHeight" Value="52"/>
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="ListViewItem">
                                                                        <Border x:Name="ItemBorder"
                                                                                Background="{TemplateBinding Background}"
                                                                                BorderBrush="Transparent"
                                                                                BorderThickness="0"
                                                                                Padding="{TemplateBinding Padding}">
                                                                            <Border.InputBindings>
                                                                                <MouseBinding MouseAction="LeftDoubleClick"
                                                                                              Command="{Binding DataContext.OpenBrowserEntryCommand, 
                                                                                                                RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                                              CommandParameter="{Binding}"/>
                                                                            </Border.InputBindings>
                                                                            <GridViewRowPresenter VerticalAlignment="Center"/>
                                                                        </Border>
                                                                        <ControlTemplate.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource HighlightSelectionBrush}"/>
                                                                            </Trigger>
                                                                            <Trigger Property="IsSelected" Value="True">
                                                                                <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource HighlightSelectionBrush}"/>
                                                                                <Setter TargetName="ItemBorder" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                                                                <Setter TargetName="ItemBorder" Property="BorderThickness" Value="2,0,0,0"/>
                                                                            </Trigger>
                                                                        </ControlTemplate.Triggers>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </ListView.ItemContainerStyle>
                                                </ListView>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                    </ContentControl>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
