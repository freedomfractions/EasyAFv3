<UserControl x:Class="EasyAF.Shell.Views.Backstage.OpenBackstageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:EasyAF.Shell.Converters"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="700"
             Background="{DynamicResource PrimaryBackgroundBrush}">
    <UserControl.Resources>
        <conv:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter" />
    </UserControl.Resources>
    
    <!-- Step 2.5 - Quick Access section with pinned folders -->
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Overall Header -->
        <TextBlock Grid.Row="0"
                   Text="Open existing document"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   Margin="0,0,0,16"/>

        <!-- Columns -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left column: navigation -->
            <StackPanel Grid.Column="0">
                <!-- Recent Files -->
                <RadioButton x:Name="RecentButton"
                             GroupName="NavMode"
                             Style="{StaticResource NavigationRadioButtonStyle}"
                             IsChecked="True"
                             Command="{Binding SelectRecentCommand}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE81C;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   FontSize="14"
                                   Margin="0,0,8,0" 
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Recent Files" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

                <Border Height="1" Margin="0,8"
                        Background="{DynamicResource SeparatorBrush}"/>

                <!-- Quick Access Section Header -->
                <TextBlock Text="QUICK ACCESS" 
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           FontSize="11"
                           FontWeight="SemiBold"
                           Margin="10,8,10,6"/>

                <!-- Quick Access Folders (data-bound) -->
                <ItemsControl ItemsSource="{Binding QuickAccessFolders}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <RadioButton GroupName="NavMode"
                                         Style="{StaticResource NavigationRadioButtonStyle}"
                                         Command="{Binding DataContext.SelectQuickAccessFolderCommand, 
                                                   RelativeSource={RelativeSource AncestorType=UserControl}}"
                                         CommandParameter="{Binding}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding IconGlyph}" 
                                               FontFamily="Segoe MDL2 Assets" 
                                               FontSize="14"
                                               Margin="0,0,8,0" 
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding FolderName}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </RadioButton>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Empty state (when no Quick Access folders) -->
                <TextBlock Text="No folders pinned"
                           Foreground="{DynamicResource TextTertiaryBrush}"
                           FontSize="11"
                           FontStyle="Italic"
                           Margin="10,4"
                           Visibility="{Binding QuickAccessFolders.Count, 
                                        Converter={StaticResource ZeroToVisibilityConverter}}"/>

                <Border Height="1" Margin="0,8"
                        Background="{DynamicResource SeparatorBrush}"/>

                <!-- Browse Button -->
                <Button x:Name="BrowseButton"
                        Style="{StaticResource BaseButtonStyle}"
                        Padding="8,6">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE8E5;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   FontSize="14"
                                   Margin="0,0,8,0" 
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Browse..." VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Vertical separator with roominess -->
            <Border Grid.Column="1"
                    Width="1"
                    Margin="16,0"
                    Background="{DynamicResource ControlBorderBrush}"/>

            <!-- Right column placeholder (search + scrollable content to be added next) -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search bar placeholder (Step 3) -->
                <Border Grid.Row="0"
                        Background="{DynamicResource ControlBackgroundBrush}"
                        BorderBrush="{DynamicResource ControlBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Height="32"
                        Margin="0,0,0,12">
                    <TextBlock Text="Search bar placeholder"
                               Margin="8,0"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                </Border>

                <!-- Scrollable content placeholder -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto">
                    <Border Padding="8"
                            Background="{DynamicResource SecondaryBackgroundBrush}"
                            BorderBrush="{DynamicResource ControlBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4">
                        <StackPanel>
                            <TextBlock Text="Mode:" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <TextBlock Text="{Binding Mode}" 
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="0,4,0,12"/>
                            <TextBlock Text="Selected Folder:" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <TextBlock Text="{Binding SelectedQuickAccessFolder.FolderPath}" 
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="0,4"/>
                        </StackPanel>
                    </Border>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
