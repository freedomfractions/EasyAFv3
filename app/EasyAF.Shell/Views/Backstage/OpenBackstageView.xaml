<UserControl x:Class="EasyAF.Shell.Views.Backstage.OpenBackstageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:EasyAF.Shell.Converters"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="700"
             Background="{DynamicResource PrimaryBackgroundBrush}">
    <UserControl.Resources>
        <conv:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter" />
        <conv:RecentTabToIndexConverter x:Key="RecentTabToIndexConverter" />
        <conv:PinnedToStarGlyphConverter x:Key="PinnedToStarGlyphConverter" />
        <conv:PinnedToColorConverter x:Key="PinnedToColorConverter" />
    </UserControl.Resources>
    
    <!-- Step 3 - Search bar with TextBox and scrollable content host -->
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Overall Header -->
        <TextBlock Grid.Row="0"
                   Text="Open existing document"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   Margin="0,0,0,16"/>

        <!-- Columns -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left column: navigation -->
            <StackPanel Grid.Column="0">
                <!-- Recent Files -->
                <RadioButton x:Name="RecentButton"
                             GroupName="NavMode"
                             Style="{StaticResource NavigationRadioButtonStyle}"
                             IsChecked="True"
                             Command="{Binding SelectRecentCommand}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE81C;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   FontSize="14"
                                   Margin="0,0,8,0" 
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Recent Files" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

                <Border Height="1" Margin="0,8"
                        Background="{DynamicResource SeparatorBrush}"/>

                <!-- Quick Access Section Header -->
                <TextBlock Text="QUICK ACCESS" 
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           FontSize="11"
                           FontWeight="SemiBold"
                           Margin="10,8,10,6"/>

                <!-- Quick Access Folders (data-bound) -->
                <ItemsControl ItemsSource="{Binding QuickAccessFolders}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <RadioButton GroupName="NavMode"
                                         Style="{StaticResource NavigationRadioButtonStyle}"
                                         Command="{Binding DataContext.SelectQuickAccessFolderCommand, 
                                                   RelativeSource={RelativeSource AncestorType=UserControl}}"
                                         CommandParameter="{Binding}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding IconGlyph}" 
                                               FontFamily="Segoe MDL2 Assets" 
                                               FontSize="14"
                                                Margin="0,0,8,0" 
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding FolderName}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </RadioButton>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Empty state (when no Quick Access folders) -->
                <TextBlock Text="No folders pinned"
                           Foreground="{DynamicResource TextTertiaryBrush}"
                           FontSize="11"
                           FontStyle="Italic"
                           Margin="10,4"
                           Visibility="{Binding QuickAccessFolders.Count, 
                                        Converter={StaticResource ZeroToVisibilityConverter}}"/>

                <Border Height="1" Margin="0,8"
                        Background="{DynamicResource SeparatorBrush}"/>

                <!-- Browse Button -->
                <Button x:Name="BrowseButton"
                        Style="{StaticResource BaseButtonStyle}"
                        Command="{Binding BrowseCommand}"
                        Padding="8,6">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE8E5;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   FontSize="14"
                                   Margin="0,0,8,0" 
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Browse..." VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Vertical separator with roominess -->
            <Border Grid.Column="1"
                    Width="1"
                    Margin="16,0"
                    Background="{DynamicResource ControlBorderBrush}"/>

            <!-- Right column: search + scrollable content -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search Bar with TextBox -->
                <Border Grid.Row="0"
                        Background="{DynamicResource ControlBackgroundBrush}"
                        BorderBrush="{DynamicResource ControlBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="8,6"
                        Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Magnifying Glass Icon -->
                        <TextBlock Grid.Column="0" 
                                   Text="&#xE721;" 
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="14"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,0,8,0" 
                                   VerticalAlignment="Center"/>
                        
                        <!-- Search TextBox -->
                        <TextBox Grid.Column="1" 
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 VerticalAlignment="Center"
                                 Foreground="{DynamicResource TextPrimaryBrush}">
                            <TextBox.Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Grid>
                                                    <!-- Placeholder text with matching padding -->
                                                    <TextBlock Text="Search"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               VerticalAlignment="Center"
                                                               Padding="2,0,0,0"
                                                               Visibility="Collapsed"
                                                               x:Name="PlaceholderText"
                                                               IsHitTestVisible="False"/>
                                                    <!-- Actual text input -->
                                                    <ScrollViewer x:Name="PART_ContentHost" 
                                                                  Padding="0"/>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="Text" Value="">
                                                        <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Grid>
                </Border>

                <!-- Scrollable Content Host -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <ContentControl x:Name="ContentHost">
                        <!-- Content switches based on Mode -->
                        <ContentControl.Style>
                            <Style TargetType="ContentControl">
                                <Style.Triggers>
                                    <!-- Recent Mode: Show TabControl -->
                                    <DataTrigger Binding="{Binding Mode}" Value="Recent">
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <TabControl SelectedIndex="{Binding RecentTab, Converter={StaticResource RecentTabToIndexConverter}}">
                                                    <TabItem Header="Files">
                                                        <ListView Background="Transparent"
                                                                  BorderThickness="0"
                                                                  ItemsSource="{Binding RecentFiles}">
                                                            <ListView.View>
                                                                <GridView>
                                                                    <!-- Icon Column -->
                                                                    <GridViewColumn Width="40">
                                                                        <GridViewColumn.CellTemplate>
                                                                            <DataTemplate>
                                                                                <TextBlock Text="&#xE8A5;" 
                                                                                           FontFamily="Segoe MDL2 Assets"
                                                                                           FontSize="20"
                                                                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                                                                           HorizontalAlignment="Center"
                                                                                           VerticalAlignment="Center"/>
                                                                            </DataTemplate>
                                                                        </GridViewColumn.CellTemplate>
                                                                    </GridViewColumn>
                                                                    <!-- Name Column (two-line) -->
                                                                    <GridViewColumn Width="320" Header="Name">
                                                                        <GridViewColumn.CellTemplate>
                                                                            <DataTemplate>
                                                                                <StackPanel VerticalAlignment="Center">
                                                                                    <TextBlock Text="{Binding FileName}" 
                                                                                               FontWeight="SemiBold"
                                                                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                                                    <TextBlock Text="{Binding DirectoryPath}" 
                                                                                               FontSize="11"
                                                                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                                                </StackPanel>
                                                                            </DataTemplate>
                                                                        </GridViewColumn.CellTemplate>
                                                                    </GridViewColumn>
                                                                    <!-- Star Column -->
                                                                    <GridViewColumn Width="30">
                                                                        <GridViewColumn.CellTemplate>
                                                                            <DataTemplate>
                                                                                <TextBlock Text="{Binding IsPinned, Converter={StaticResource PinnedToStarGlyphConverter}}" 
                                                                                           FontFamily="Segoe MDL2 Assets"
                                                                                           FontSize="16"
                                                                                           Foreground="{Binding IsPinned, Converter={StaticResource PinnedToColorConverter}}"
                                                                                           HorizontalAlignment="Center"
                                                                                           VerticalAlignment="Center"
                                                                                           Cursor="Hand">
                                                                                    <TextBlock.InputBindings>
                                                                                        <MouseBinding MouseAction="LeftClick"
                                                                                                      Command="{Binding DataContext.TogglePinCommand, 
                                                                                                                RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                                                      CommandParameter="{Binding}"/>
                                                                                    </TextBlock.InputBindings>
                                                                                </TextBlock>
                                                                            </DataTemplate>
                                                                        </GridViewColumn.CellTemplate>
                                                                    </GridViewColumn>
                                                                    <!-- Date Modified Column -->
                                                                    <GridViewColumn Width="120" Header="Date modified">
                                                                        <GridViewColumn.CellTemplate>
                                                                            <DataTemplate>
                                                                                <TextBlock Text="{Binding LastModifiedDisplay}" 
                                                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                                                           VerticalAlignment="Center"/>
                                                                            </DataTemplate>
                                                                        </GridViewColumn.CellTemplate>
                                                                    </GridViewColumn>
                                                                </GridView>
                                                            </ListView.View>
                                                            <ListView.ItemContainerStyle>
                                                                <Style TargetType="ListViewItem">
                                                                    <Setter Property="Background" Value="Transparent"/>
                                                                    <Setter Property="BorderThickness" Value="0"/>
                                                                    <Setter Property="Padding" Value="0"/>
                                                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                                    <Setter Property="MinHeight" Value="52"/>
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="ListViewItem">
                                                                                <Border x:Name="ItemBorder"
                                                                                        Background="{TemplateBinding Background}"
                                                                                        BorderBrush="Transparent"
                                                                                        BorderThickness="0"
                                                                                        Padding="{TemplateBinding Padding}">
                                                                                    <GridViewRowPresenter VerticalAlignment="Center"/>
                                                                                </Border>
                                                                                <ControlTemplate.Triggers>
                                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                                        <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource HighlightSelectionBrush}"/>
                                                                                    </Trigger>
                                                                                    <Trigger Property="IsSelected" Value="True">
                                                                                        <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource HighlightSelectionBrush}"/>
                                                                                        <Setter TargetName="ItemBorder" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                                                                        <Setter TargetName="ItemBorder" Property="BorderThickness" Value="2,0,0,0"/>
                                                                                    </Trigger>
                                                                                </ControlTemplate.Triggers>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </ListView.ItemContainerStyle>
                                                        </ListView>
                                                    </TabItem>
                                                    <TabItem Header="Folders">
                                                        <ListView Background="Transparent"
                                                                  BorderThickness="0"
                                                                  ItemsSource="{Binding RecentFolders}">
                                                            <ListView.View>
                                                                <GridView>
                                                                    <!-- Icon Column -->
                                                                    <GridViewColumn Width="40">
                                                                        <GridViewColumn.CellTemplate>
                                                                            <DataTemplate>
                                                                                <TextBlock Text="&#xE8B7;" 
                                                                                           FontFamily="Segoe MDL2 Assets"
                                                                                           FontSize="20"
                                                                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                                                                           HorizontalAlignment="Center"
                                                                                           VerticalAlignment="Center"/>
                                                                            </DataTemplate>
                                                                        </GridViewColumn.CellTemplate>
                                                                    </GridViewColumn>
                                                                    <!-- Name Column (two-line) -->
                                                                    <GridViewColumn Width="350" Header="Name">
                                                                        <GridViewColumn.CellTemplate>
                                                                            <DataTemplate>
                                                                                <StackPanel VerticalAlignment="Center">
                                                                                    <TextBlock Text="{Binding FolderName}" 
                                                                                               FontWeight="SemiBold"
                                                                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                                                    <TextBlock Text="{Binding ParentPath}" 
                                                                                               FontSize="11"
                                                                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                                                </StackPanel>
                                                                            </DataTemplate>
                                                                        </GridViewColumn.CellTemplate>
                                                                    </GridViewColumn>
                                                                    <!-- Date Modified Column -->
                                                                    <GridViewColumn Width="120" Header="Date modified">
                                                                        <GridViewColumn.CellTemplate>
                                                                            <DataTemplate>
                                                                                <TextBlock Text="{Binding LastAccessedDisplay}" 
                                                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                                                           VerticalAlignment="Center"/>
                                                                            </DataTemplate>
                                                                        </GridViewColumn.CellTemplate>
                                                                    </GridViewColumn>
                                                                </GridView>
                                                            </ListView.View>
                                                            <ListView.ItemContainerStyle>
                                                                <Style TargetType="ListViewItem">
                                                                    <Setter Property="Background" Value="Transparent"/>
                                                                    <Setter Property="BorderThickness" Value="0"/>
                                                                    <Setter Property="Padding" Value="0"/>
                                                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                                    <Setter Property="MinHeight" Value="52"/>
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="ListViewItem">
                                                                                <Border x:Name="ItemBorder"
                                                                                        Background="{TemplateBinding Background}"
                                                                                        BorderBrush="Transparent"
                                                                                        BorderThickness="0"
                                                                                        Padding="{TemplateBinding Padding}">
                                                                                    <GridViewRowPresenter VerticalAlignment="Center"/>
                                                                                </Border>
                                                                                <ControlTemplate.Triggers>
                                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                                        <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource HighlightSelectionBrush}"/>
                                                                                    </Trigger>
                                                                                    <Trigger Property="IsSelected" Value="True">
                                                                                        <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource HighlightSelectionBrush}"/>
                                                                                        <Setter TargetName="ItemBorder" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                                                                        <Setter TargetName="ItemBorder" Property="BorderThickness" Value="2,0,0,0"/>
                                                                                    </Trigger>
                                                                                </ControlTemplate.Triggers>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </ListView.ItemContainerStyle>
                                                        </ListView>
                                                    </TabItem>
                                                </TabControl>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <!-- QuickAccessFolder Mode: Placeholder -->
                                    <DataTrigger Binding="{Binding Mode}" Value="QuickAccessFolder">
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <Border Padding="12"
                                                        Background="{DynamicResource SecondaryBackgroundBrush}"
                                                        BorderBrush="{DynamicResource ControlBorderBrush}"
                                                        BorderThickness="1"
                                                        CornerRadius="4">
                                                    <StackPanel>
                                                        <TextBlock Text="Quick Access Folder View" FontWeight="SemiBold" 
                                                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                        <TextBlock Text="{Binding SelectedQuickAccessFolder.FolderPath}" 
                                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                                   Margin="0,4"/>
                                                        <TextBlock Text="(Step 9 implementation)" 
                                                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                                                   FontStyle="Italic"
                                                                   Margin="0,4"/>
                                                    </StackPanel>
                                                </Border>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                    </ContentControl>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
