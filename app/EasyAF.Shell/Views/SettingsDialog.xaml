<Window x:Class="EasyAF.Shell.Views.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyAF.Shell.Views"
        xmlns:converters="clr-namespace:EasyAF.Shell.Converters"
        xmlns:behaviors="clr-namespace:EasyAF.Shell.Behaviors"
        mc:Ignorable="d"
        Title="Settings" 
        Height="500" 
        Width="700"
        MinHeight="400"
        MinWidth="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackgroundBrush}"
        ResizeMode="CanResize"
        WindowStyle="ToolWindow"
        ShowInTaskbar="False">
    <Window.Resources>
        <!-- Apply BaseButtonStyle locally -->
        <Style BasedOn="{StaticResource BaseButtonStyle}" TargetType="Button" />
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tab Control for Settings Categories -->
        <TabControl Grid.Row="0" 
                    Background="{DynamicResource PrimaryBackgroundBrush}"
                    BorderBrush="{DynamicResource ControlBorderBrush}"
                    BorderThickness="0">
            
            <!-- General Settings Tab -->
            <TabItem Header="General" HorizontalContentAlignment="Stretch">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" 
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   FontWeight="SemiBold"
                                   Padding="12,8"/>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled"
                              HorizontalContentAlignment="Stretch">
                    <Grid Margin="20" HorizontalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/> <!-- Theme Section -->
                            <RowDefinition Height="Auto"/> <!-- General Section -->
                        </Grid.RowDefinitions>

                        <!-- Theme Section -->
                        <StackPanel Grid.Row="0">
                            <!-- Theme Selection -->
                            <TextBlock Text="Theme" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Select the application color theme (changes apply immediately)" 
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       FontSize="12"
                                       Margin="0,0,0,12"/>
                            
                            <ListBox ItemsSource="{Binding AvailableThemes}"
                                     SelectedItem="{Binding SelectedThemeDescriptor, Mode=TwoWay}"
                                     Background="{DynamicResource ControlBackgroundBrush}"
                                     BorderBrush="{DynamicResource ControlBorderBrush}"
                                     BorderThickness="1"
                                     Padding="8"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                     behaviors:MouseWheelBubbleBehavior.IsEnabled="True">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="4">
                                            <Ellipse Width="12" Height="12" 
                                                     Fill="{DynamicResource AccentBrush}"
                                                     Margin="0,0,8,0"
                                                     Visibility="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}, Converter={StaticResource BoolToVisibility}}"/>
                                            <TextBlock Text="{Binding DisplayName}" 
                                                       FontSize="14"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <!-- Theme Preview Box -->
                            <Border Margin="0,20,0,0"
                                    Background="{DynamicResource SecondaryBackgroundBrush}"
                                    BorderBrush="{DynamicResource ControlBorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="16">
                                <StackPanel>
                                    <TextBlock Text="Preview" 
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               Margin="0,0,0,12"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Primary:" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,4"/>
                                        <Rectangle Grid.Row="0" Grid.Column="1" Fill="{DynamicResource TextPrimaryBrush}" Height="20" Margin="8,4"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Accent:" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,4"/>
                                        <Rectangle Grid.Row="1" Grid.Column="1" Fill="{DynamicResource AccentBrush}" Height="20" Margin="8,4"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Background:" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,4"/>
                                        <Rectangle Grid.Row="2" Grid.Column="1" Fill="{DynamicResource PrimaryBackgroundBrush}" Stroke="{DynamicResource ControlBorderBrush}" StrokeThickness="1" Height="20" Margin="8,4"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- General Settings Section -->
                        <StackPanel Grid.Row="1" Margin="0,32,0,0">
                            <TextBlock Text="General" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       Margin="0,0,0,8"/>
                            
                            <!-- Recent Files Limit -->
                            <TextBlock Text="Recent files limit" 
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       Margin="0,8,0,4"/>
                            <TextBlock Text="Maximum number of recent files to display (3-250)" 
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       FontSize="11"
                                       Margin="0,0,0,8"/>
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0"
                                          x:Name="RecentFilesLimitTextBox"
                                         Text="{Binding RecentFilesLimitText, UpdateSourceTrigger=PropertyChanged}"
                                         HorizontalContentAlignment="Center"
                                         VerticalContentAlignment="Center"
                                         Height="28"
                                         Background="{DynamicResource ControlBackgroundBrush}"
                                         Foreground="{DynamicResource TextPrimaryBrush}"
                                         BorderBrush="{DynamicResource ControlBorderBrush}"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding RecentFilesLimitText, StringFormat='({0} items)'}"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="12,0,0,0"/>
                            </Grid>
                            
                            <CheckBox Content="Show welcome screen on startup"
                                      IsChecked="True"
                                      Foreground="{DynamicResource TextPrimaryBrush}"
                                      Margin="0,8"/>
                            
                            <CheckBox Content="Restore open documents on startup"
                                      IsChecked="True"
                                      Foreground="{DynamicResource TextPrimaryBrush}"
                                      Margin="0,8"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- CROSS-MODULE EDIT: 2025-01-16 Map Module Settings Feature - Step 8 -->
            <!-- Modified for: Add Map Editor settings tab -->
            <!-- Related modules: Map (MapModuleSettingsView, MapModuleSettingsViewModel) -->
            <!-- Rollback instructions: Remove this TabItem -->
            
            <!-- Map Editor Settings Tab -->
            <TabItem Header="Map Editor"
                     Visibility="{Binding MapSettingsViewModel, Converter={StaticResource NullToVisibilityConverter}}">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" 
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   FontWeight="SemiBold"
                                   Padding="12,8"/>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                <ContentControl Content="{Binding MapSettingsViewModel}"/>
            </TabItem>

            <!-- CROSS-MODULE EDIT: 2025-01-27 Project Module Settings -->
            <!-- Modified for: Add Project Editor settings tab -->
            <!-- Related modules: Project (ProjectModuleSettingsView, ProjectModuleSettingsViewModel) -->
            <!-- Rollback instructions: Remove this TabItem -->
            
            <!-- Project Editor Settings Tab -->
            <TabItem Header="Project Editor"
                     Visibility="{Binding ProjectSettingsViewModel, Converter={StaticResource NullToVisibilityConverter}}">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" 
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   FontWeight="SemiBold"
                                   Padding="12,8"/>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                <ContentControl Content="{Binding ProjectSettingsViewModel}"/>
            </TabItem>
        </TabControl>

        <!-- Dialog Buttons -->
        <Border Grid.Row="1" 
                Background="{DynamicResource SecondaryBackgroundBrush}"
                BorderBrush="{DynamicResource ControlBorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,12">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="OK" 
                        Width="80" 
                        Margin="0,0,8,0"
                        Command="{Binding OkCommand}"
                        IsDefault="True"/>
                <Button Content="Cancel" 
                        Width="80" 
                        Margin="0,0,8,0"
                        Command="{Binding CancelCommand}"
                        IsCancel="True"/>
                <Button Content="Apply" 
                        Width="80"
                        Command="{Binding ApplyCommand}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
