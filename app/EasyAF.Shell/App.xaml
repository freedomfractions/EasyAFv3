<prism:PrismApplication x:Class="EasyAF.Shell.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EasyAF.Shell"
             xmlns:prism="http://prismlibrary.com/">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Fluent.Ribbon Base Resources -->
                <ResourceDictionary Source="pack://application:,,,/Fluent;component/Themes/Generic.xaml" />
                
                <!-- Application Theme (default to Light) -->
                <ResourceDictionary Source="/EasyAF.Shell;component/Theme/Light.xaml" />

                <!-- Document Tabs Styles -->
                <ResourceDictionary Source="/EasyAF.Shell;component/Styles/DocumentTabs.xaml" />

                <!-- Common Control Styles (ScrollBar, Thumb, future shared styles) -->
                <ResourceDictionary Source="/EasyAF.Shell;component/Styles/CommonControls.xaml" />
                
                <!-- Module Data Templates -->
                <ResourceDictionary Source="/EasyAF.Shell;component/Styles/ModuleDataTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>
