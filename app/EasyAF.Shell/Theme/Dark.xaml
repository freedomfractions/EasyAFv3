<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark Theme Color Palette -->
    <!-- Primary Colors -->
    <Color x:Key="AccentColor">#3B82F6</Color>
    <Color x:Key="AccentColorHover">#60A5FA</Color>
    
    <!-- Background Colors -->
    <Color x:Key="WindowBackgroundColor">#FF1F2937</Color>
    <Color x:Key="PrimaryBackgroundColor">#FF1F2937</Color>
    <Color x:Key="SecondaryBackgroundColor">#FF374151</Color>
    <Color x:Key="ControlBackgroundColor">#FF374151</Color>
    
    <!-- Border Colors -->
    <Color x:Key="ControlBorderColor">#FF4B5563</Color>
    <Color x:Key="ControlBorderHoverColor">#FF6B7280</Color>
    <Color x:Key="ControlBorderFocusColor">#3B82F6</Color>
    
    <!-- Tab Colors -->
    <Color x:Key="TabInactiveBackgroundColor">#FF374151</Color>
    <Color x:Key="TabInactiveBorderColor">#FF4B5563</Color>
    <Color x:Key="TabActiveBackgroundColor">#FF1F2937</Color>
    <Color x:Key="TabActiveBorderColor">#FF3B82F6</Color>
    
    <!-- Separator & Divider -->
    <Color x:Key="SeparatorColor">#FF4B5563</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimaryColor">#FFF9FAFB</Color>
    <Color x:Key="TextSecondaryColor">#FFD1D5DB</Color>
    <Color x:Key="TextTertiaryColor">#FF9CA3AF</Color>
    <Color x:Key="TextDisabledColor">#FF6B7280</Color>
    
    <!-- Status Colors -->
    <Color x:Key="ErrorColor">#FFEF4444</Color>
    <Color x:Key="SuccessColor">#FF10B981</Color>
    <Color x:Key="WarningColor">#FFF59E0B</Color>
    <Color x:Key="InfoColor">#FF3B82F6</Color>
    
    <!-- Highlight Colors -->
    <Color x:Key="HighlightSelectionColor">#FF1E3A5F</Color>
    <Color x:Key="ReadonlyBackgroundColor">#FF2D3748</Color>

    <!-- Log Level Colors (Dark Theme - optimized for contrast on dark backgrounds) -->
    <Color x:Key="LogVerboseColor">#FF9CA3AF</Color>
    <Color x:Key="LogDebugColor">#FFD1D5DB</Color>
    <Color x:Key="LogInformationColor">#FF60A5FA</Color>
    <Color x:Key="LogWarningColor">#FFFBBF24</Color>
    <Color x:Key="LogErrorColor">#FFFCA5A5</Color>
    <Color x:Key="LogFatalColor">#FFFECACA</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentColorHover}"/>
    
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}"/>
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{StaticResource PrimaryBackgroundColor}"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{StaticResource SecondaryBackgroundColor}"/>
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{StaticResource ControlBackgroundColor}"/>
    
    <SolidColorBrush x:Key="ControlBorderBrush" Color="{StaticResource ControlBorderColor}"/>
    <SolidColorBrush x:Key="ControlBorderHoverBrush" Color="{StaticResource ControlBorderHoverColor}"/>
    <SolidColorBrush x:Key="ControlBorderFocusBrush" Color="{StaticResource ControlBorderFocusColor}"/>
    
    <SolidColorBrush x:Key="TabInactiveBackgroundBrush" Color="{StaticResource TabInactiveBackgroundColor}"/>
    <SolidColorBrush x:Key="TabInactiveBorderBrush" Color="{StaticResource TabInactiveBorderColor}"/>
    <SolidColorBrush x:Key="TabActiveBackgroundBrush" Color="{StaticResource TabActiveBackgroundColor}"/>
    <SolidColorBrush x:Key="TabActiveBorderBrush" Color="{StaticResource TabActiveBorderColor}"/>
    
    <SolidColorBrush x:Key="SeparatorBrush" Color="{StaticResource SeparatorColor}"/>
    
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextTertiaryColor}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabledColor}"/>
    
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
    
    <SolidColorBrush x:Key="HighlightSelectionBrush" Color="{StaticResource HighlightSelectionColor}"/>
    <SolidColorBrush x:Key="ReadonlyBackgroundBrush" Color="{StaticResource ReadonlyBackgroundColor}"/>

    <!-- Log Level Brushes -->
    <SolidColorBrush x:Key="LogVerboseBrush" Color="{StaticResource LogVerboseColor}"/>
    <SolidColorBrush x:Key="LogDebugBrush" Color="{StaticResource LogDebugColor}"/>
    <SolidColorBrush x:Key="LogInformationBrush" Color="{StaticResource LogInformationColor}"/>
    <SolidColorBrush x:Key="LogWarningBrush" Color="{StaticResource LogWarningColor}"/>
    <SolidColorBrush x:Key="LogErrorBrush" Color="{StaticResource LogErrorColor}"/>
    <SolidColorBrush x:Key="LogFatalBrush" Color="{StaticResource LogFatalColor}"/>

</ResourceDictionary>
