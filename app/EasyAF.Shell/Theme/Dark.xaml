<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark Theme Color Palette (Grayscale-first with subtle blue accent) -->
    <!-- Accent (used sparingly for focus/active elements) -->
    <Color x:Key="AccentColor">#3B82F6</Color>
    <Color x:Key="AccentColorHover">#60A5FA</Color>
    
    <!-- Background Colors (grayscale) -->
    <Color x:Key="WindowBackgroundColor">#FF121212</Color>
    <Color x:Key="PrimaryBackgroundColor">#FF121212</Color>
    <Color x:Key="SecondaryBackgroundColor">#FF1C1C1C</Color>
    <Color x:Key="ControlBackgroundColor">#FF181818</Color>
    
    <!-- Button Specific Colors (consistent with grayscale theme) -->
    <Color x:Key="ButtonBackgroundColor">#FF181818</Color>
    <Color x:Key="ButtonForegroundColor">#FFF2F2F2</Color>
    <Color x:Key="ButtonBorderColor">#FF2A2A2A</Color>
    <Color x:Key="ButtonHoverBackgroundColor">#FF222222</Color>
    <Color x:Key="ButtonDisabledBackgroundColor">#FF1A1A1A</Color>
    <Color x:Key="ButtonDisabledForegroundColor">#FF6E6E6E</Color>
    
    <!-- Border Colors (grayscale) -->
    <Color x:Key="ControlBorderColor">#FF2A2A2A</Color>
    <Color x:Key="ControlBorderHoverColor">#FF3A3A3A</Color>
    <!-- Use accent for focus to provide subtle blue cue -->
    <Color x:Key="ControlBorderFocusColor">#3B82F6</Color>
    
    <!-- Tab Colors (grayscale backgrounds, accent active border) -->
    <Color x:Key="TabInactiveBackgroundColor">#FF1C1C1C</Color>
    <Color x:Key="TabInactiveBorderColor">#FF2A2A2A</Color>
    <Color x:Key="TabActiveBackgroundColor">#FF161616</Color>
    <Color x:Key="TabActiveBorderColor">#FF3B82F6</Color>
    
    <!-- Separator & Divider (grayscale) -->
    <Color x:Key="SeparatorColor">#FF2A2A2A</Color>
    
    <!-- Text Colors (high-contrast grayscale) -->
    <Color x:Key="TextPrimaryColor">#FFF2F2F2</Color>
    <Color x:Key="TextSecondaryColor">#FFCACACA</Color>
    <Color x:Key="TextTertiaryColor">#FF9E9E9E</Color>
    <Color x:Key="TextDisabledColor">#FF6E6E6E</Color>
    <Color x:Key="SelectedTextColor">#FFF2F2F2</Color> <!-- NEW: Text color for selected items (same as primary for dark mode) -->

    <!-- Status Colors (used in content; keep readable on dark bg) -->
    <Color x:Key="ErrorColor">#FFEF4444</Color>
    <Color x:Key="SuccessColor">#FF22C55E</Color>
    <Color x:Key="WarningColor">#FFF59E0B</Color>
    <Color x:Key="InfoColor">#FF3B82F6</Color>
    <Color x:Key="RequiredIndicatorColor">#FFEF4444</Color> <!-- Bright red for required field indicator -->

    <!-- Highlight Colors (subtle grayscale highlight) -->
    <Color x:Key="HighlightSelectionColor">#FF222222</Color>
    <Color x:Key="ReadonlyBackgroundColor">#FF202020</Color>
    <Color x:Key="HoverBackgroundColor">#FF222222</Color>
    <Color x:Key="AccentBackgroundColor">#FF1C2941</Color>

    <!-- Data Import Colors (New vs Old Data visual differentiation) -->
    <!-- New Data: Red theme for foreground, orange-red for backgrounds (dark mode compatible) -->
    <Color x:Key="NewDataForegroundColor">#FFEF4444</Color> <!-- Bright red for dark backgrounds -->
    <Color x:Key="NewDataBackgroundColor">#FF2D1515</Color> <!-- Dark red background -->
    <Color x:Key="NewDataBorderColor">#FFDC2626</Color> <!-- Medium red border -->
    <Color x:Key="NewDataGlowColor">#FFF87171</Color> <!-- Light red for glow effects -->
    
    <!-- Old Data: Green theme for foreground, light green for backgrounds (dark mode compatible) -->
    <Color x:Key="OldDataForegroundColor">#FF22C55E</Color> <!-- Bright green for dark backgrounds -->
    <Color x:Key="OldDataBackgroundColor">#FF14291D</Color> <!-- Dark green background -->
    <Color x:Key="OldDataBorderColor">#FF059669</Color> <!-- Medium green border -->
    <Color x:Key="OldDataGlowColor">#FF6EE7B7</Color> <!-- Light green for glow effects -->

    <!-- Log Level Colors (Dark Theme - maintain contrast on grayscale bg) -->
    <Color x:Key="LogVerboseColor">#FF9E9E9E</Color>
    <Color x:Key="LogDebugColor">#FFCFCFCF</Color>
    <Color x:Key="LogInformationColor">#FF60A5FA</Color>
    <Color x:Key="LogWarningColor">#FFFBBF24</Color>
    <Color x:Key="LogErrorColor">#FFFCA5A5</Color>
    <Color x:Key="LogFatalColor">#FFFECACA</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentColorHover}"/>
    
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}"/>
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{StaticResource PrimaryBackgroundColor}"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{StaticResource SecondaryBackgroundColor}"/>
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{StaticResource ControlBackgroundColor}"/>
    
    <!-- Button Brushes -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="{StaticResource ButtonBackgroundColor}"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="{StaticResource ButtonForegroundColor}"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="{StaticResource ButtonBorderColor}"/>
    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="{StaticResource ButtonHoverBackgroundColor}"/>
    <SolidColorBrush x:Key="ButtonDisabledBackgroundBrush" Color="{StaticResource ButtonDisabledBackgroundColor}"/>
    <SolidColorBrush x:Key="ButtonDisabledForegroundBrush" Color="{StaticResource ButtonDisabledForegroundColor}"/>
    
    <SolidColorBrush x:Key="ControlBorderBrush" Color="{StaticResource ControlBorderColor}"/>
    <SolidColorBrush x:Key="ControlBorderHoverBrush" Color="{StaticResource ControlBorderHoverColor}"/>
    <SolidColorBrush x:Key="ControlBorderFocusBrush" Color="{StaticResource ControlBorderFocusColor}"/>
    
    <SolidColorBrush x:Key="TabInactiveBackgroundBrush" Color="{StaticResource TabInactiveBackgroundColor}"/>
    <SolidColorBrush x:Key="TabInactiveBorderBrush" Color="{StaticResource TabInactiveBorderColor}"/>
    <SolidColorBrush x:Key="TabActiveBackgroundBrush" Color="{StaticResource TabActiveBackgroundColor}"/>
    <SolidColorBrush x:Key="TabActiveBorderBrush" Color="{StaticResource TabActiveBorderColor}"/>
    
    <SolidColorBrush x:Key="SeparatorBrush" Color="{StaticResource SeparatorColor}"/>
    
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextTertiaryColor}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabledColor}"/>
    <SolidColorBrush x:Key="SelectedTextBrush" Color="{StaticResource SelectedTextColor}"/> <!-- NEW: Brush for selected text -->

    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
    <SolidColorBrush x:Key="RequiredIndicatorBrush" Color="{StaticResource RequiredIndicatorColor}"/>

    <SolidColorBrush x:Key="HighlightSelectionBrush" Color="{StaticResource HighlightSelectionColor}"/>
    <SolidColorBrush x:Key="ReadonlyBackgroundBrush" Color="{StaticResource ReadonlyBackgroundColor}"/>
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="{StaticResource HoverBackgroundColor}"/>
    <SolidColorBrush x:Key="AccentBackgroundBrush" Color="{StaticResource AccentBackgroundColor}"/>

    <!-- Data Import Brushes -->
    <SolidColorBrush x:Key="NewDataForegroundBrush" Color="{StaticResource NewDataForegroundColor}"/>
    <SolidColorBrush x:Key="NewDataBackgroundBrush" Color="{StaticResource NewDataBackgroundColor}"/>
    <SolidColorBrush x:Key="NewDataBorderBrush" Color="{StaticResource NewDataBorderColor}"/>
    <SolidColorBrush x:Key="NewDataGlowBrush" Color="{StaticResource NewDataGlowColor}"/>
    
    <SolidColorBrush x:Key="OldDataForegroundBrush" Color="{StaticResource OldDataForegroundColor}"/>
    <SolidColorBrush x:Key="OldDataBackgroundBrush" Color="{StaticResource OldDataBackgroundColor}"/>
    <SolidColorBrush x:Key="OldDataBorderBrush" Color="{StaticResource OldDataBorderColor}"/>
    <SolidColorBrush x:Key="OldDataGlowBrush" Color="{StaticResource OldDataGlowColor}"/>

    <!-- Log Level Brushes -->
    <SolidColorBrush x:Key="LogVerboseBrush" Color="{StaticResource LogVerboseColor}"/>
    <SolidColorBrush x:Key="LogDebugBrush" Color="{StaticResource LogDebugColor}"/>
    <SolidColorBrush x:Key="LogInformationBrush" Color="{StaticResource LogInformationColor}"/>
    <SolidColorBrush x:Key="LogWarningBrush" Color="{StaticResource LogWarningColor}"/>
    <SolidColorBrush x:Key="LogErrorBrush" Color="{StaticResource LogErrorColor}"/>
    <SolidColorBrush x:Key="LogFatalBrush" Color="{StaticResource LogFatalColor}"/>

</ResourceDictionary>
