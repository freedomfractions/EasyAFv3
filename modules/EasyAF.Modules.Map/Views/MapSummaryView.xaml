<UserControl x:Class="EasyAF.Modules.Map.Views.MapSummaryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:EasyAF.Modules.Map.Converters"
             Background="{DynamicResource PrimaryBackgroundBrush}">
    
    <UserControl.Resources>
        <!-- Merge Map Editor themed styles -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/EasyAF.Modules.Map;component/Styles/MapEditorStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
            <converters:InverseNullToVisibilityConverter x:Key="InverseNullToVisibility"/>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <!-- Welcome Screen (shown when document is empty) -->
        <Border x:Name="WelcomeScreen"
                Background="{DynamicResource SecondaryBackgroundBrush}">
            <!-- Show when both collections are empty -->
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding ReferencedFiles.Count}" Value="0"/>
                                <Condition Binding="{Binding DataTypeProperties.Count}" Value="0"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Visibility" Value="Visible"/>
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        MaxWidth="600">
                <!-- CROSS-MODULE EDIT: 2025-01-16 Empty Map Handling -->
                <!-- Modified for: Improve empty state with helpful guidance and action buttons -->
                <!-- Related modules: Map (MapSummaryViewModel) -->
                <!-- Rollback instructions: Restore original simple welcome screen -->
                
                <!-- Icon -->
                <TextBlock Text="&#xE7C3;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="72"
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource AccentBrush}"
                           Margin="0,0,0,24"/>
                
                <!-- Title -->
                <TextBlock Text="Welcome to Map Editor"
                           FontSize="28"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           Margin="0,0,0,16"/>
                
                <!-- Description -->
                <TextBlock TextWrapping="Wrap"
                           TextAlignment="Center"
                           FontSize="14"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           LineHeight="22"
                           Margin="0,0,0,24">
                    <Run Text="Create data import mappings by associating columns from your"/>
                    <LineBreak/>
                    <Run Text="sample files with properties in EasyAF data types."/>
                </TextBlock>
                
                <!-- Getting Started Steps -->
                <Border Background="{DynamicResource SecondaryBackgroundBrush}"
                        BorderBrush="{DynamicResource ControlBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="24"
                        Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="Getting Started"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,16"/>
                        
                        <!-- Step 1 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Background="{DynamicResource AccentBrush}"
                                    Width="24" Height="24"
                                    CornerRadius="12"
                                    Margin="0,0,12,0">
                                <TextBlock Text="1"
                                           Foreground="White"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Foreground="{DynamicResource TextPrimaryBrush}"
                                       VerticalAlignment="Center">
                                <Run Text="Click"/>
                                <Run Text="'Load Sample'" FontWeight="Bold"/>
                                <Run Text="in the ribbon to add a sample CSV or Excel file"/>
                            </TextBlock>
                        </StackPanel>
                        
                        <!-- Step 2 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Background="{DynamicResource AccentBrush}"
                                    Width="24" Height="24"
                                    CornerRadius="12"
                                    Margin="0,0,12,0">
                                <TextBlock Text="2"
                                           Foreground="White"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Foreground="{DynamicResource TextPrimaryBrush}"
                                       VerticalAlignment="Center">
                                <Run Text="Select a data type tab (Bus, LVCB, etc.) to begin mapping"/>
                            </TextBlock>
                        </StackPanel>
                        
                        <!-- Step 3 -->
                        <StackPanel Orientation="Horizontal">
                            <Border Background="{DynamicResource AccentBrush}"
                                    Width="24" Height="24"
                                    CornerRadius="12"
                                    Margin="0,0,12,0">
                                <TextBlock Text="3"
                                           Foreground="White"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Foreground="{DynamicResource TextPrimaryBrush}"
                                       VerticalAlignment="Center">
                                <Run Text="Associate columns with properties, then save your map"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Quick Action Button -->
                <Button Content="Load Your First Sample File"
                        Command="{Binding AddFileCommand}"
                        Style="{StaticResource AccentButtonStyle}"
                        Padding="20,12"
                        FontSize="14"
                        HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Actual Content (shown when document has data) -->
        <ScrollViewer x:Name="ContentScroller"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <!-- Hide when both collections are empty -->
            <ScrollViewer.Style>
                <Style TargetType="ScrollViewer">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding ReferencedFiles.Count}" Value="0"/>
                                <Condition Binding="{Binding DataTypeProperties.Count}" Value="0"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </ScrollViewer.Style>
            
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Map Information -->
                    <RowDefinition Height="Auto"/> <!-- Referenced Files -->
                    <RowDefinition Height="*"/>    <!-- Data Type Status -->
                </Grid.RowDefinitions>
                
                <!-- Map Information Section -->
                <GroupBox Grid.Row="0" 
                          Header="Map Information" 
                          Margin="0,0,0,20"
                          Foreground="{DynamicResource TextPrimaryBrush}"
                          BorderBrush="{DynamicResource ControlBorderBrush}">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Map Name -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="Map Name:" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,0,8"
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBox Grid.Row="0" Grid.Column="1" 
                                 Text="{Binding MapName, UpdateSourceTrigger=PropertyChanged}"
                                 VerticalAlignment="Center"
                                 Margin="0,0,0,8"
                                 Background="{DynamicResource ControlBackgroundBrush}"
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 BorderBrush="{DynamicResource ControlBorderBrush}"/>
                        
                        <!-- Software Version -->
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="Software Version:" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,0,8"
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBox Grid.Row="1" Grid.Column="1" 
                                 Text="{Binding SoftwareVersion, UpdateSourceTrigger=PropertyChanged}"
                                 VerticalAlignment="Center"
                                 Margin="0,0,0,8"
                                 Background="{DynamicResource ControlBackgroundBrush}"
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 BorderBrush="{DynamicResource ControlBorderBrush}"/>
                        
                        <!-- Date Modified (Read-only) -->
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                   Text="Date Modified:" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,0,8"
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" 
                                   Text="{Binding DateModified, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,0,8"
                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                        
                        <!-- Description -->
                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                   Text="Description:" 
                                   VerticalAlignment="Top" 
                                   Margin="0,4,0,0"
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBox Grid.Row="3" Grid.Column="1" 
                                 Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 MinHeight="60"
                                 MaxHeight="120"
                                 VerticalScrollBarVisibility="Auto"
                                 Background="{DynamicResource ControlBackgroundBrush}"
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 BorderBrush="{DynamicResource ControlBorderBrush}"/>
                    </Grid>
                </GroupBox>
                
                <!-- Referenced Files Section -->
                <GroupBox Grid.Row="1" 
                          Header="Referenced Sample Files" 
                          Margin="0,0,0,20"
                          Foreground="{DynamicResource TextPrimaryBrush}"
                          BorderBrush="{DynamicResource ControlBorderBrush}">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="150"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Toolbar -->
                        <ToolBar Grid.Row="0" 
                                 Background="{DynamicResource SecondaryBackgroundBrush}"
                                 BorderBrush="{DynamicResource ControlBorderBrush}">
                            <Button Command="{Binding AddFileCommand}" 
                                    Content="Add File"
                                    Style="{StaticResource ToolBarButtonStyle}"/>
                            <Button Command="{Binding RemoveFileCommand}" 
                                    Content="Remove"
                                    Style="{StaticResource ToolBarButtonStyle}"/>
                            <Separator Style="{StaticResource ToolBarSeparatorStyle}"/>
                            <Button Command="{Binding BrowseFileCommand}" 
                                    Content="Browse..."
                                    Style="{StaticResource ToolBarButtonStyle}"/>
                        </ToolBar>
                        
                        <!-- Files DataGrid -->
                        <DataGrid Grid.Row="1" 
                                  x:Name="FilesDataGrid"
                                  ItemsSource="{Binding ReferencedFiles}"
                                  SelectedItem="{Binding SelectedFile}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  AllowDrop="True"
                                  DragOver="FilesDataGrid_DragOver"
                                  Drop="FilesDataGrid_Drop"
                                  RowStyle="{StaticResource MapDataGridRowStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="File Name" 
                                                    Binding="{Binding FileName}" 
                                                    Width="200"/>
                                <DataGridTextColumn Header="Path" 
                                                    Binding="{Binding FilePath}" 
                                                    Width="*"/>
                                <DataGridTextColumn Header="Status" 
                                                    Binding="{Binding Status}" 
                                                    Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </GroupBox>
                
                <!-- Data Type Mapping Status Section -->
                <GroupBox Grid.Row="2" 
                          Header="Data Type Mapping Status"
                          Foreground="{DynamicResource TextPrimaryBrush}"
                          BorderBrush="{DynamicResource ControlBorderBrush}">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Status DataGrid (Refresh is now automatic when tab is selected) -->
                        <DataGrid ItemsSource="{Binding DataTypeProperties}"
                                  SelectedItem="{Binding SelectedDataType}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  RowStyle="{StaticResource MapDataGridRowStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Data Type" 
                                                    Binding="{Binding TypeName}" 
                                                    Width="150"/>
                                
                                <!-- Status Indicator Column -->
                                <DataGridTemplateColumn Header="Status" Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Ellipse Width="12" Height="12" 
                                                     Fill="{Binding StatusColor}"
                                                     HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <DataGridTextColumn Header="Available" 
                                                    Binding="{Binding FieldsAvailable}" 
                                                    Width="80"/>
                                <DataGridTextColumn Header="Mapped" 
                                                    Binding="{Binding FieldsMapped}" 
                                                    Width="80"/>
                                
                                <!-- Progress Column -->
                                <DataGridTemplateColumn Header="Progress" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <ProgressBar Value="{Binding FieldsMapped}"
                                                             Maximum="{Binding FieldsAvailable}"
                                                             Height="16"
                                                             BorderThickness="1"
                                                             BorderBrush="{DynamicResource ControlBorderBrush}"/>
                                                <TextBlock HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           FontSize="10"
                                                           Foreground="{DynamicResource TextPrimaryBrush}">
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0}/{1}">
                                                            <Binding Path="FieldsMapped"/>
                                                            <Binding Path="FieldsAvailable"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </GroupBox>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
