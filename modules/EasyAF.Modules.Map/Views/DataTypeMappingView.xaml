<UserControl x:Class="EasyAF.Modules.Map.Views.DataTypeMappingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:EasyAF.Modules.Map.Converters"
             Background="{DynamicResource PrimaryBackgroundBrush}">
    
    <!-- Converters and Styles -->
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/EasyAF.Modules.Map;component/Styles/MapEditorStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- BoolToVisibility Converter -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            
            <!-- NullToVisibility Converter -->
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Toolbar -->
            <RowDefinition Height="*"/>    <!-- Mapping Area -->
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <ToolBar Grid.Row="0" 
                 Background="{DynamicResource SecondaryBackgroundBrush}"
                 BorderBrush="{DynamicResource ControlBorderBrush}">
            <Button Command="{Binding AutoMapCommand}" 
                    Content="Auto-Map"
                    Padding="8,4"
                    ToolTip="Automatically map columns based on intelligent matching"/>
            <Button Command="{Binding ClearMappingsCommand}" 
                    Content="Clear All"
                    Padding="8,4"
                    ToolTip="Remove all mappings for this data type"/>
            <Separator/>
            <TextBlock Text="Source Table:" 
                       VerticalAlignment="Center" 
                       Margin="4,0,4,0"
                       Foreground="{DynamicResource TextPrimaryBrush}"/>
            <ComboBox ItemsSource="{Binding AvailableTables}"
                      SelectedItem="{Binding SelectedTable}"
                      MinWidth="200"
                      Background="{DynamicResource ControlBackgroundBrush}"
                      Foreground="{DynamicResource TextPrimaryBrush}"
                      BorderBrush="{DynamicResource ControlBorderBrush}"/>
            <Separator/>
            <Button Command="{Binding LoadFromFileCommand}"
                    Content="Load File..."
                    Padding="8,4"
                    ToolTip="Load columns from a sample file"/>
        </ToolBar>
        
        <!-- Mapping Area - Dual Pane Layout -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/> <!-- Source Columns -->
                <ColumnDefinition Width="Auto"/> <!-- Buttons -->
                <ColumnDefinition Width="2*"/> <!-- Target Properties -->
            </Grid.ColumnDefinitions>
            
            <!-- Source Columns (Left Pane) -->
            <GroupBox Grid.Column="0" 
                      Header="Available Columns (Source)"
                      Foreground="{DynamicResource TextPrimaryBrush}"
                      BorderBrush="{DynamicResource ControlBorderBrush}">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Filter -->
                        <RowDefinition Height="*"/>    <!-- List -->
                        <RowDefinition Height="Auto"/> <!-- Count -->
                    </Grid.RowDefinitions>
                    
                    <!-- Filter TextBox -->
                    <TextBox Grid.Row="0" 
                             Text="{Binding SourceFilter, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,8"
                             Background="{DynamicResource ControlBackgroundBrush}"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             BorderBrush="{DynamicResource ControlBorderBrush}">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="1"
                                                    CornerRadius="3">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <!-- Search Icon -->
                                                    <TextBlock Grid.Column="0"
                                                               Text="&#xE721;"
                                                               FontFamily="Segoe MDL2 Assets"
                                                               FontSize="14"
                                                               Margin="6,0,4,0"
                                                               VerticalAlignment="Center"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                    
                                                    <ScrollViewer Grid.Column="1" 
                                                                  x:Name="PART_ContentHost"
                                                                  VerticalAlignment="Center"
                                                                  Margin="0,2"/>
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    
                    <!-- Source Columns List -->
                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding SourceColumnsView}"
                             SelectedItem="{Binding SelectedSourceColumn}"
                             Style="{StaticResource MappingListBoxStyle}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="4"
                                        Margin="2"
                                        CornerRadius="3">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Style.Triggers>
                                                <!-- Highlight mapped columns using theme brushes -->
                                                <DataTrigger Binding="{Binding IsMapped}" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource MappedHighlightBrush}"/>
                                                    <Setter Property="BorderBrush" Value="{DynamicResource MappedBorderBrush}"/>
                                                    <Setter Property="BorderThickness" Value="1"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    
                                    <StackPanel>
                                        <TextBlock Text="{Binding ColumnName}"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        <TextBlock Text="{Binding MappedTo}"
                                                   FontSize="10"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Visibility="{Binding IsMapped, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem" BasedOn="{StaticResource MappingListBoxItemStyle}"/>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                    
                    <!-- Column Count -->
                    <TextBlock Grid.Row="2"
                               Margin="0,4,0,0"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontSize="11">
                        <Run Text="Columns:"/>
                        <Run Text="{Binding SourceColumns.Count, Mode=OneWay}"/>
                    </TextBlock>
                </Grid>
            </GroupBox>
            
            <!-- Mapping Buttons (Center) -->
            <StackPanel Grid.Column="1" 
                        VerticalAlignment="Center"
                        Margin="10,0">
                <Button Content="Map ?"
                        Command="{Binding MapSelectedCommand}"
                        Padding="12,8"
                        Margin="0,4"
                        MinWidth="80"
                        ToolTip="Map selected column to selected property"/>
                <Button Content="? Unmap"
                        Command="{Binding UnmapSelectedCommand}"
                        Padding="12,8"
                        Margin="0,4"
                        MinWidth="80"
                        ToolTip="Remove mapping from selected property"/>
            </StackPanel>
            
            <!-- Target Properties (Right Pane) -->
            <GroupBox Grid.Column="2" 
                      Header="{Binding DataType, StringFormat='Target Properties ({0})'}"
                      Foreground="{DynamicResource TextPrimaryBrush}"
                      BorderBrush="{DynamicResource ControlBorderBrush}">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Filter -->
                        <RowDefinition Height="*"/>    <!-- List -->
                        <RowDefinition Height="Auto"/> <!-- Count -->
                    </Grid.RowDefinitions>
                    
                    <!-- Filter TextBox -->
                    <TextBox Grid.Row="0" 
                             Text="{Binding TargetFilter, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,8"
                             Background="{DynamicResource ControlBackgroundBrush}"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             BorderBrush="{DynamicResource ControlBorderBrush}">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="1"
                                                    CornerRadius="3">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <!-- Search Icon -->
                                                    <TextBlock Grid.Column="0"
                                                               Text="&#xE721;"
                                                               FontFamily="Segoe MDL2 Assets"
                                                               FontSize="14"
                                                               Margin="6,0,4,0"
                                                               VerticalAlignment="Center"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                    
                                                    <ScrollViewer Grid.Column="1" 
                                                                  x:Name="PART_ContentHost"
                                                                  VerticalAlignment="Center"
                                                                  Margin="0,2"/>
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    
                    <!-- Target Properties List -->
                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding TargetPropertiesView}"
                             SelectedItem="{Binding SelectedTargetProperty}"
                             Style="{StaticResource MappingListBoxStyle}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="4"
                                        Margin="2"
                                        CornerRadius="3"
                                        BorderThickness="1">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Style.Triggers>
                                                <!-- Highlight mapped properties using theme brushes -->
                                                <DataTrigger Binding="{Binding IsMapped}" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource MappedHighlightBrush}"/>
                                                    <Setter Property="BorderBrush" Value="{DynamicResource MappedBorderBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding PropertyName}"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                                            <TextBlock Text="{Binding MappedColumn}"
                                                       FontSize="10"
                                                       Foreground="{DynamicResource SuccessBrush}"
                                                       Visibility="{Binding IsMapped, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                            <TextBlock Text="{Binding Description}"
                                                       FontSize="10"
                                                       TextWrapping="Wrap"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       Visibility="{Binding Description, Converter={StaticResource NullToVisibilityConverter}}"/>
                                        </StackPanel>
                                        
                                        <!-- Mapping Indicator -->
                                        <TextBlock Grid.Column="1"
                                                   Text="?"
                                                   FontSize="16"
                                                   Foreground="{DynamicResource SuccessBrush}"
                                                   VerticalAlignment="Center"
                                                   Margin="4,0,0,0"
                                                   Visibility="{Binding IsMapped, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem" BasedOn="{StaticResource MappingListBoxItemStyle}"/>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                    
                    <!-- Property Count & Status -->
                    <StackPanel Grid.Row="2"
                                Margin="0,4,0,0"
                                Orientation="Horizontal">
                        <TextBlock Foreground="{DynamicResource TextSecondaryBrush}"
                                   FontSize="11">
                            <Run Text="Properties:"/>
                            <Run Text="{Binding MappedCount, Mode=OneWay}"/>
                            <Run Text="/"/>
                            <Run Text="{Binding AvailableCount, Mode=OneWay}"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
