<UserControl x:Class="EasyAF.Modules.Map.Views.DataTypeMappingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:EasyAF.Modules.Map.Converters"
             Background="{DynamicResource PrimaryBackgroundBrush}"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">
    
    <!-- Converters and Styles -->
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/EasyAF.Modules.Map;component/Styles/MapEditorStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- BoolToVisibility Converter -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            
            <!-- NullToVisibility Converter -->
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Margin="10" 
          HorizontalAlignment="Stretch" 
          VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Toolbar -->
            <RowDefinition Height="*"/>    <!-- Mapping Area -->
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="300"/> <!-- Dataset Columns (LEFT) - Proportional -->
            <ColumnDefinition Width="Auto"/> <!-- Buttons -->
            <ColumnDefinition Width="1*" MinWidth="300"/> <!-- Target Properties (RIGHT) - Proportional -->
        </Grid.ColumnDefinitions>
        
        <!-- Toolbar - Spans across all columns -->
        <ToolBar Grid.Row="0" 
                 Grid.Column="0"
                 Grid.ColumnSpan="3"
                 Background="{DynamicResource SecondaryBackgroundBrush}"
                 BorderBrush="{DynamicResource ControlBorderBrush}">
            <Button Command="{Binding AutoMapCommand}" 
                    Content="Auto-Map"
                    Style="{StaticResource ToolBarButtonStyle}"
                    ToolTip="Automatically map columns based on intelligent matching"/>
            <Button Command="{Binding ClearMappingsCommand}" 
                    Content="Clear All"
                    Style="{StaticResource ToolBarButtonStyle}"
                    ToolTip="Remove all mappings for this data type"/>
            <Separator Style="{StaticResource ToolBarSeparatorStyle}"/>
            <Button Command="{Binding ManageFieldsCommand}" 
                    Content="Fields to Map..."
                    Style="{StaticResource ToolBarButtonStyle}"
                    ToolTip="Choose which properties to show/hide for mapping"/>
            <Separator Style="{StaticResource ToolBarSeparatorStyle}"/>
            <TextBlock Text="Source Table:" 
                       VerticalAlignment="Center" 
                       Margin="4,0,4,0"
                       Foreground="{DynamicResource TextPrimaryBrush}"/>
            
            <!-- CROSS-MODULE EDIT: 2025-01-16 Table Selection UX Enhancement -->
            <!-- Modified for: Add glowing border effect to guide user to select table -->
            <!-- Related modules: Map (DataTypeMappingViewModel) -->
            <!-- Rollback instructions: Remove Border wrapper and restore ComboBox as direct child of ToolBar -->
            
            <!-- Wrapper Border for glow effect -->
            <Border CornerRadius="4"
                    Padding="2"
                    Margin="2">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Style.Triggers>
                            <!-- Show pulsing glow when no table selected -->
                            <DataTrigger Binding="{Binding HasTableSelected}" Value="False">
                                <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                           From="1.0" To="0.3"
                                                           Duration="0:0:1.5"
                                                           AutoReverse="True"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                
                <ComboBox ItemsSource="{Binding ComboBoxItems}"
                          SelectedItem="{Binding SelectedComboBoxItem}"
                          MinWidth="250"
                          MaxDropDownHeight="400"
                          Style="{StaticResource ThemedComboBoxStyle}"
                          ToolTip="Select a table/sheet from your loaded files">
                    
                    <!-- Item Template with visual differentiation for headers vs items -->
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplayText}"
                                       Foreground="{DynamicResource TextPrimaryBrush}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <!-- Default style for single-table items (no indent) -->
                                        <Setter Property="Margin" Value="4"/>
                                        <Setter Property="FontWeight" Value="Normal"/>
                                        <Style.Triggers>
                                            <!-- Header style (non-selectable) - includes placeholder -->
                                            <DataTrigger Binding="{Binding IsSelectable}" Value="False">
                                                <Setter Property="Margin" Value="0,6,0,2"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                <Setter Property="FontSize" Value="11"/>
                                                <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                                                <Setter Property="Background" Value="{DynamicResource SecondaryBackgroundBrush}"/>
                                                <Setter Property="Padding" Value="6,4"/>
                                                <!-- CROSS-MODULE EDIT: 2025-01-16 Empty Files Placeholder -->
                                                <!-- Modified for: Make placeholder text wrap and italic -->
                                                <!-- Related modules: Map (DataTypeMappingViewModel) -->
                                                <!-- Rollback instructions: Remove TextWrapping and FontStyle setters -->
                                                <Setter Property="TextWrapping" Value="Wrap"/>
                                                <Setter Property="FontStyle" Value="Italic"/>
                                            </DataTrigger>
                                            <!-- Indent multi-table items -->
                                            <DataTrigger Binding="{Binding ShouldIndent}" Value="True">
                                                <Setter Property="Margin" Value="16,4,4,4"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                    
                    <!-- Custom ItemContainerStyle to prevent selecting headers -->
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSelectable}" Value="False">
                                    <Setter Property="IsEnabled" Value="False"/>
                                    <Setter Property="Focusable" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>
            </Border>
            
            <!-- CROSS-MODULE EDIT: 2025-01-16 Table Selection UX Enhancement -->
            <!-- Modified for: Add Reset button to clear table selection -->
            <!-- Related modules: Map (DataTypeMappingViewModel) -->
            <!-- Rollback instructions: Remove this Button and associated command -->
            
            <!-- Reset Table Button -->
            <Button Content="Reset Table"
                    Command="{Binding ResetTableCommand}"
                    ToolTip="Clear table selection and start over"
                    Margin="4,0,0,0">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource ToolBarButtonStyle}">
                        <Style.Triggers>
                            <!-- Only enabled when a table is selected -->
                            <DataTrigger Binding="{Binding HasTableSelected}" Value="False">
                                <Setter Property="IsEnabled" Value="False"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <Separator Style="{StaticResource ToolBarSeparatorStyle}"/>
        </ToolBar>
        
        <!-- Dataset Columns (LEFT Pane) -->
        <GroupBox Grid.Row="1" 
                  Grid.Column="0"
                  Margin="0,10,0,0"
                  Header="{Binding DataType, StringFormat='Target Properties ({0})'}"
                  Foreground="{DynamicResource TextPrimaryBrush}"
                  BorderBrush="{DynamicResource ControlBorderBrush}">
            <Grid Margin="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Filter -->
                    <RowDefinition Height="*"/>    <!-- List -->
                    <RowDefinition Height="Auto"/> <!-- Count -->
                </Grid.RowDefinitions>
                
                <!-- Filter TextBox -->
                <TextBox Grid.Row="0" 
                         Text="{Binding TargetFilter, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,4"
                         Background="{DynamicResource ControlBackgroundBrush}"
                         Foreground="{DynamicResource TextPrimaryBrush}"
                         BorderBrush="{DynamicResource ControlBorderBrush}">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="3">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                            
                                                <!-- Search Icon -->
                                                <TextBlock Grid.Column="0"
                                                           Text="&#xE721;"
                                                           FontFamily="Segoe MDL2 Assets"
                                                           FontSize="14"
                                                           Margin="6,0,4,0"
                                                           VerticalAlignment="Center"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                            
                                                <ScrollViewer Grid.Column="1" 
                                                              x:Name="PART_ContentHost"
                                                              VerticalAlignment="Center"
                                                              Margin="0,2"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                
                <!-- Target Properties List -->
                <ListBox Grid.Row="1"
                         ItemsSource="{Binding TargetPropertiesView}"
                         SelectedItem="{Binding SelectedTargetProperty}"
                         Style="{StaticResource MappingListBoxStyle}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="4"
                                    Margin="2"
                                    CornerRadius="3"
                                    BorderThickness="1">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Style.Triggers>
                                            <!-- Highlight mapped properties using theme brushes -->
                                            <DataTrigger Binding="{Binding IsMapped}" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource MappedHighlightBrush}"/>
                                                <Setter Property="BorderBrush" Value="{DynamicResource MappedBorderBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding PropertyName}"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                                            <!-- CROSS-MODULE EDIT: 2025-01-16 Required Property Validation -->
                                            <!-- Modified for: Add red asterisk (*) indicator for required properties -->
                                            <!-- Related modules: Map (PropertyInfo.IsRequired, PropertyDiscoveryService) -->
                                            <!-- Rollback instructions: Remove this TextBlock with asterisk -->
                                            <TextBlock Text=" *"
                                                       FontWeight="Bold"
                                                       Foreground="Red"
                                                       Visibility="{Binding IsRequired, Converter={StaticResource BoolToVisibilityConverter}}"
                                                       ToolTip="This property is required for a valid mapping configuration"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding MappedColumn}"
                                                   FontSize="10"
                                                   Foreground="{DynamicResource SuccessBrush}"
                                                   Visibility="{Binding IsMapped, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        <TextBlock Text="{Binding Description}"
                                                   FontSize="10"
                                                   TextWrapping="Wrap"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Visibility="{Binding Description, Converter={StaticResource NullToVisibilityConverter}}"/>
                                    </StackPanel>
                                    
                                    <!-- Mapping Indicator -->
                                    <TextBlock Grid.Column="1"
                                               Text="?"
                                               FontSize="16"
                                               Foreground="{DynamicResource SuccessBrush}"
                                               VerticalAlignment="Center"
                                               Margin="4,0,0,0"
                                               Visibility="{Binding IsMapped, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem" BasedOn="{StaticResource MappingListBoxItemStyle}"/>
                    </ListBox.ItemContainerStyle>
                </ListBox>
                
                <!-- Property Count & Status -->
                <StackPanel Grid.Row="2"
                            Margin="0,4,0,0"
                            Orientation="Horizontal">
                    <TextBlock Foreground="{DynamicResource TextSecondaryBrush}"
                               FontSize="11">
                        <Run Text="Properties:"/>
                        <Run Text="{Binding MappedCount, Mode=OneWay}"/>
                        <Run Text="/"/>
                        <Run Text="{Binding AvailableCount, Mode=OneWay}"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- Mapping Buttons (Center) -->
        <StackPanel Grid.Row="1"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Margin="10,0">
            <Button Content="Map ?"
                    Command="{Binding MapSelectedCommand}"
                    Style="{StaticResource BaseButtonStyle}"
                    Padding="12,8"
                    Margin="0,4"
                    MinWidth="80"
                    ToolTip="Map selected property to selected column"/>
            <Button Content="? Unmap"
                    Command="{Binding UnmapSelectedCommand}"
                    Style="{StaticResource BaseButtonStyle}"
                    Padding="12,8"
                    Margin="0,4"
                    MinWidth="80"
                    ToolTip="Remove mapping from selected property"/>
        </StackPanel>
        
        <!-- Source Columns (RIGHT Pane) -->
        <GroupBox Grid.Row="1" 
                  Grid.Column="2"
                  Margin="0,10,0,0"
                  Header="Available Columns (Source)"
                  Foreground="{DynamicResource TextPrimaryBrush}"
                  BorderBrush="{DynamicResource ControlBorderBrush}">
            <Grid Margin="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Filter -->
                    <RowDefinition Height="*"/>    <!-- List -->
                    <RowDefinition Height="Auto"/> <!-- Count -->
                </Grid.RowDefinitions>
                
                <!-- Filter TextBox -->
                <TextBox Grid.Row="0" 
                         Text="{Binding SourceFilter, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,4"
                         Background="{DynamicResource ControlBackgroundBrush}"
                         Foreground="{DynamicResource TextPrimaryBrush}"
                         BorderBrush="{DynamicResource ControlBorderBrush}">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="3">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                            
                                                <!-- Search Icon -->
                                                <TextBlock Grid.Column="0"
                                                           Text="&#xE721;"
                                                           FontFamily="Segoe MDL2 Assets"
                                                           FontSize="14"
                                                           Margin="6,0,4,0"
                                                           VerticalAlignment="Center"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                            
                                                <ScrollViewer Grid.Column="1" 
                                                              x:Name="PART_ContentHost"
                                                              VerticalAlignment="Center"
                                                              Margin="0,2"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                
                <!-- Source Columns List -->
                <ListBox Grid.Row="1"
                         ItemsSource="{Binding SourceColumnsView}"
                         SelectedItem="{Binding SelectedSourceColumn}"
                         Style="{StaticResource MappingListBoxStyle}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="4"
                                    Margin="2"
                                    CornerRadius="3">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Style.Triggers>
                                            <!-- Highlight mapped columns using theme brushes -->
                                            <DataTrigger Binding="{Binding IsMapped}" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource MappedHighlightBrush}"/>
                                                <Setter Property="BorderBrush" Value="{DynamicResource MappedBorderBrush}"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            
                                <StackPanel>
                                    <TextBlock Text="{Binding ColumnName}"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <TextBlock Text="{Binding MappedTo}"
                                               FontSize="10"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Visibility="{Binding IsMapped, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem" BasedOn="{StaticResource MappingListBoxItemStyle}"/>
                    </ListBox.ItemContainerStyle>
                </ListBox>
                
                <!-- Column Count -->
                <TextBlock Grid.Row="2"
                           Margin="0,4,0,0"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           FontSize="11">
                    <Run Text="Columns:"/>
                    <Run Text="{Binding SourceColumns.Count, Mode=OneWay}"/>
                </TextBlock>
            </Grid>
        </GroupBox>
        
        <!-- CROSS-MODULE EDIT: 2025-01-16 Table Selection Validation -->
        <!-- Modified for: Show helpful message when no table selected -->
        <!-- Related modules: Map (DataTypeMappingViewModel) -->
        <!-- Rollback instructions: Remove this overlay Border -->
        
        <!-- No Table Selected Overlay -->
        <Border Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Background="{DynamicResource WindowBackgroundBrush}"
                Opacity="0.95"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                CornerRadius="8"
                Padding="32,24"
                BorderBrush="{DynamicResource ControlBorderBrush}"
                BorderThickness="2"
                Margin="20">
            <Border.Visibility>
                <Binding Path="HasTableSelected">
                    <Binding.Converter>
                        <converters:InverseBoolToVisibilityConverter/>
                    </Binding.Converter>
                </Binding>
            </Border.Visibility>
            
            <StackPanel MaxWidth="400">
                <!-- Icon -->
                <TextBlock Text="&#xE946;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="48"
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           Margin="0,0,0,16"/>
                
                <!-- Title -->
                <TextBlock Text="No Source Table Selected"
                           FontSize="16"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           Margin="0,0,0,8"/>
                
                <!-- Message -->
                <TextBlock Text="{Binding NoTableMessage}"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           Margin="0,0,0,16"/>
                
                <!-- Instructions -->
                <TextBlock TextWrapping="Wrap"
                           TextAlignment="Center"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           FontSize="12">
                    <Run Text="1. Use the"/>
                    <Run Text="Source Table" FontWeight="Bold"/>
                    <Run Text="dropdown in the toolbar above"/>
                    <LineBreak/>
                    <Run Text="2. Select a table from your loaded sample files"/>
                    <LineBreak/>
                    <Run Text="3. Begin mapping columns to properties"/>
                </TextBlock>
            </StackPanel>
        </Border>
        
    </Grid> <!-- End of Mapping Interface Grid -->
</UserControl>
