<UserControl x:Class="EasyAF.Modules.Map.Views.MapDocumentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:EasyAF.Modules.Map.ViewModels"
             xmlns:views="clr-namespace:EasyAF.Modules.Map.Views"
             xmlns:converters="clr-namespace:EasyAF.Modules.Map.Converters"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             Background="{DynamicResource PrimaryBackgroundBrush}">
    
    <UserControl.Resources>
        <!-- Merge Map Editor themed styles -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/EasyAF.Modules.Map;component/Styles/MapEditorStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- CROSS-MODULE EDIT: 2025-01-19 Status Enum Converters -->
            <!-- Modified for: Convert MappingStatus enum to MDL2 glyphs and theme brushes -->
            <!-- Related modules: Map (MappingStatus enum, converters) -->
            <!-- Rollback instructions: Remove converter declarations and use string binding -->
            
            <!-- Status Enum Converters -->
            <converters:MappingStatusToGlyphConverter x:Key="StatusToGlyphConverter"/>
            <converters:MappingStatusToBrushConverter x:Key="StatusToBrushConverter"/>
            
            <!-- DataTemplates to map ViewModels to Views -->
            <DataTemplate DataType="{x:Type vm:MapSummaryViewModel}">
                <views:MapSummaryView HorizontalAlignment="Stretch" 
                                      VerticalAlignment="Stretch"/>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type vm:DataTypeMappingViewModel}">
                <views:DataTypeMappingView HorizontalAlignment="Stretch" 
                                           VerticalAlignment="Stretch"/>
            </DataTemplate>
            
            <!-- TabControl Style to ensure content stretches -->
            <Style TargetType="TabControl">
                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            </Style>
            
            <!-- TabItem Style to ensure each tab's content area stretches -->
            <Style TargetType="TabItem" BasedOn="{StaticResource {x:Type TabItem}}">
                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <!-- Main TabControl for document tabs -->
        <TabControl ItemsSource="{Binding TabHeaders}"
                    SelectedIndex="{Binding SelectedTabIndex}"
                    BorderThickness="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="{DynamicResource PrimaryBackgroundBrush}">
            
            <!-- Tab Header Template -->
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="8,4">
                        <!-- Icon: Gear for Setup tab, Status glyph for data type tabs -->
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                   FontSize="14"
                                   Margin="0,0,6,0"
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <!-- Default: Show status glyph for data type tabs -->
                                    <Setter Property="Text" Value="{Binding StatusGlyph}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                                    
                                    <Style.Triggers>
                                        <!-- Data type tabs: Color by status (order matters - most specific last) -->
                                        <DataTrigger Binding="{Binding Status}" Value="Unmapped">
                                            <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Partial">
                                            <Setter Property="Foreground" Value="{DynamicResource WarningBrush}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Complete">
                                            <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
                                        </DataTrigger>
                                        
                                        <!-- Setup tab: Override everything - MUST BE LAST to take priority -->
                                        <DataTrigger Binding="{Binding DataType}" Value="{x:Null}">
                                            <Setter Property="Text" Value="&#xE713;"/>
                                            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        
                        <!-- Tab Header Text -->
                        <TextBlock Text="{Binding DisplayName}"
                                   FontSize="13"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
            
            <!-- Tab Content Template -->
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <!-- The ViewModel property contains the actual VM (MapSummaryViewModel or DataTypeMappingViewModel) -->
                    <!-- WPF will automatically use the DataTemplate from Resources based on the ViewModel type -->
                    <ContentControl Content="{Binding ViewModel}"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Stretch"/>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</UserControl>
