<UserControl x:Class="EasyAF.Modules.Spec.Views.SpecDocumentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:EasyAF.Modules.Spec.ViewModels"
             xmlns:views="clr-namespace:EasyAF.Modules.Spec.Views"
             Background="{DynamicResource PrimaryBackgroundBrush}">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <!-- DataTemplates to map ViewModels to Views -->
            <DataTemplate DataType="{x:Type vm:SpecSetupViewModel}">
                <views:SpecSetupView HorizontalAlignment="Stretch" 
                                     VerticalAlignment="Stretch"/>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type vm:TableEditorViewModel}">
                <views:TableEditorView HorizontalAlignment="Stretch" 
                                       VerticalAlignment="Stretch"/>
            </DataTemplate>
            
            <!-- AUDIT FIX #4: TabControl Style to ensure content stretches (matches Map module) -->
            <Style TargetType="TabControl">
                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            </Style>
            
            <!-- AUDIT FIX #4: TabItem Style to ensure each tab's content area stretches (matches Map module) -->
            <Style TargetType="TabItem" BasedOn="{StaticResource {x:Type TabItem}}">
                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <!-- AUDIT FIX #4: Make tabs expand to fill horizontal space (matches Map module) -->
    <TabControl ItemsSource="{Binding TabHeaders}"
                SelectedIndex="{Binding SelectedTabIndex}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{DynamicResource PrimaryBackgroundBrush}"
                BorderBrush="{DynamicResource ControlBorderBrush}"
                BorderThickness="0,1,0,0">
        
        <!-- Tab Header Template -->
        <TabControl.ItemTemplate>
            <DataTemplate>
                <TextBlock Text="{Binding Header}"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           Padding="12,6"
                           VerticalAlignment="Center"/>
            </DataTemplate>
        </TabControl.ItemTemplate>
        
        <!-- Tab Content Template -->
        <TabControl.ContentTemplate>
            <DataTemplate>
                <!-- The ViewModel property contains the actual VM (SpecSetupViewModel or TableEditorViewModel) -->
                <!-- WPF will automatically use the DataTemplate from Resources based on the ViewModel type -->
                <ContentControl Content="{Binding ViewModel}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Stretch"/>
            </DataTemplate>
        </TabControl.ContentTemplate>
        
    </TabControl>
</UserControl>
