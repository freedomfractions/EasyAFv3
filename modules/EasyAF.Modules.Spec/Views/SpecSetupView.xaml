<UserControl x:Class="EasyAF.Modules.Spec.Views.SpecSetupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource PrimaryBackgroundBrush}">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  Background="{DynamicResource PrimaryBackgroundBrush}">
        <Grid Margin="20">
            <!-- Two-column layout (same as Map/Project Setup tabs) -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/> <!-- Left: Table definitions + Statistics -->
                <ColumnDefinition Width="16"/> <!-- Spacer -->
                <ColumnDefinition Width="2*"/> <!-- Right: Map validation -->
            </Grid.ColumnDefinitions>
            
            <!-- LEFT COLUMN: Table Definitions + Statistics -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>    <!-- Table grid -->
                    <RowDefinition Height="16"/>   <!-- Spacer -->
                    <RowDefinition Height="Auto"/> <!-- Statistics -->
                </Grid.RowDefinitions>
                
                <!-- Table Definitions Section -->
                <GroupBox Grid.Row="0" 
                          Header="Tables" 
                          BorderBrush="{DynamicResource ControlBorderBrush}">
                    <Grid Margin="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/> <!-- Toolbar -->
                            <RowDefinition Height="*"/>    <!-- Grid -->
                        </Grid.RowDefinitions>
                        
                        <!-- Toolbar -->
                        <ToolBar Grid.Row="0" 
                                 Background="Transparent"
                                 BorderThickness="0">
                            <Button Content="Add Table" 
                                    Command="{Binding AddTableCommand}"
                                    Style="{DynamicResource BaseButtonStyle}"/>
                            <Button Content="Remove" 
                                    Command="{Binding RemoveTableCommand}"
                                    Style="{DynamicResource BaseButtonStyle}"/>
                            <Separator/>
                            <Button Content="▲" 
                                    Command="{Binding MoveTableUpCommand}"
                                    ToolTip="Move Up"
                                    Style="{DynamicResource BaseButtonStyle}"
                                    Width="32"/>
                            <Button Content="▼" 
                                    Command="{Binding MoveTableDownCommand}"
                                    ToolTip="Move Down"
                                    Style="{DynamicResource BaseButtonStyle}"
                                    Width="32"/>
                        </ToolBar>
                        
                        <!-- Table Grid -->
                        <DataGrid Grid.Row="1" 
                                  ItemsSource="{Binding Tables}"
                                  SelectedItem="{Binding SelectedTable}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  Background="{DynamicResource ControlBackgroundBrush}"
                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                  BorderBrush="{DynamicResource ControlBorderBrush}"
                                  BorderThickness="1"
                                  Margin="0,8,0,0">
                            <DataGrid.Columns>
                                <!-- Table Name Column -->
                                <DataGridTextColumn Header="Table Name" 
                                                    Binding="{Binding TableName, UpdateSourceTrigger=PropertyChanged}" 
                                                    Width="200"/>
                                
                                <!-- Data Types Column (TODO: Custom cell template with DataTypePicker) -->
                                <DataGridTextColumn Header="Data Types" 
                                                    Binding="{Binding DataTypesDisplay, Mode=OneWay}" 
                                                    Width="300"
                                                    IsReadOnly="True"/>
                                
                                <!-- Columns Count (Read-only) -->
                                <DataGridTextColumn Header="Columns" 
                                                    Binding="{Binding ColumnCount, Mode=OneWay}" 
                                                    Width="80"
                                                    IsReadOnly="True"/>
                                
                                <!-- Mode Column -->
                                <DataGridComboBoxColumn Header="Mode" 
                                                        Width="100">
                                    <!-- TODO: Bind to TableMode property -->
                                </DataGridComboBoxColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </GroupBox>
                
                <!-- Statistics Section -->
                <GroupBox Grid.Row="2" 
                          Header="Table Statistics" 
                          BorderBrush="{DynamicResource ControlBorderBrush}"
                          MaxHeight="300">
                    <DataGrid ItemsSource="{Binding Statistics}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Background="{DynamicResource ControlBackgroundBrush}"
                              Foreground="{DynamicResource TextPrimaryBrush}"
                              BorderBrush="{DynamicResource ControlBorderBrush}"
                              BorderThickness="1"
                              HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Data Type" 
                                                Binding="{Binding DataTypeName}" 
                                                Width="150"/>
                            
                            <!-- Status Indicator -->
                            <DataGridTemplateColumn Header="Status" Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Ellipse Width="12" 
                                                 Height="12" 
                                                 Fill="{Binding StatusColor}"
                                                 HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <DataGridTextColumn Header="Fields Used" 
                                                Binding="{Binding FieldsUsed}" 
                                                Width="100"/>
                            
                            <DataGridTextColumn Header="Fields Available" 
                                                Binding="{Binding FieldsAvailable}" 
                                                Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
            </Grid>
            
            <!-- RIGHT COLUMN: Map Validation -->
            <GroupBox Grid.Column="2" 
                      Header="Map Validation" 
                      BorderBrush="{DynamicResource ControlBorderBrush}">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Map selection -->
                        <RowDefinition Height="16"/>   <!-- Spacer -->
                        <RowDefinition Height="Auto"/> <!-- Validate button -->
                        <RowDefinition Height="16"/>   <!-- Spacer -->
                        <RowDefinition Height="*"/>    <!-- Results -->
                    </Grid.RowDefinitions>
                    
                    <!-- Map File Selection -->
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="4"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" 
                                   Text="Map File:" 
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                        
                        <ComboBox Grid.Row="2"
                                  ItemsSource="{Binding AvailableMapFiles}"
                                  SelectedItem="{Binding SelectedMapFile}"
                                  Background="{DynamicResource ControlBackgroundBrush}"
                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                  BorderBrush="{DynamicResource ControlBorderBrush}"/>
                    </Grid>
                    
                    <!-- Validate Button -->
                    <Button Grid.Row="2" 
                            Content="Validate Against Map" 
                            Command="{Binding ValidateMapCommand}"
                            Style="{DynamicResource AccentButtonStyle}"
                            HorizontalAlignment="Stretch"
                            Padding="8,4"/>
                    
                    <!-- Validation Results -->
                    <GroupBox Grid.Row="4" 
                              Header="Validation Results"
                              BorderBrush="{DynamicResource ControlBorderBrush}">
                        <DataGrid ItemsSource="{Binding ValidationResults}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  Background="{DynamicResource ControlBackgroundBrush}"
                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                  BorderBrush="{DynamicResource ControlBorderBrush}"
                                  BorderThickness="1">
                            <DataGrid.Columns>
                                <!-- Status Icon -->
                                <DataGridTemplateColumn Header="" Width="30">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Ellipse Width="12" 
                                                     Height="12" 
                                                     Fill="{Binding StatusColor}"
                                                     HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <DataGridTextColumn Header="Property Path" 
                                                    Binding="{Binding PropertyPath}" 
                                                    Width="*"/>
                                
                                <DataGridTextColumn Header="Status" 
                                                    Binding="{Binding Status}" 
                                                    Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </Grid>
            </GroupBox>
        </Grid>
    </ScrollViewer>
</UserControl>
