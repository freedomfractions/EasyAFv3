<Window x:Class="EasyAF.Modules.Spec.Views.Dialogs.ColumnEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Column Editor"
        Width="1000" Height="700"
        MinWidth="900" MinHeight="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackgroundBrush}"
        ShowInTaskbar="False">
    
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Main Content Area (we'll add panels here) -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- LEFT PANEL: Configuration (ScrollViewer for all panels) -->
            <ScrollViewer Grid.Column="0" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="Column Editor - Under Construction"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="{DynamicResource AccentBrush}"
                               Margin="0,20"/>
                    <TextBlock Text="Components will be added incrementally:"
                               Margin="0,8,0,4"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <TextBlock Text="- Basic Settings Panel"
                               Margin="8,2"
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBlock Text="- Content Mode Selector"
                               Margin="8,2"
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBlock Text="- Property Paths Panel"
                               Margin="8,2"
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBlock Text="- Format String Panel"
                               Margin="8,2"
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBlock Text="- Expression Panel"
                               Margin="8,2"
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBlock Text="- Literal Panel"
                               Margin="8,2"
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBlock Text="- Formatting Options"
                               Margin="8,2"
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1"
                          Width="4"
                          HorizontalAlignment="Stretch"
                          Background="{DynamicResource ControlBorderBrush}"
                          ShowsPreview="True"/>
            
            <!-- RIGHT PANEL: Preview (will add preview panel here) -->
            <Border Grid.Column="2"
                    BorderBrush="{DynamicResource ControlBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12"
                    Background="{DynamicResource SecondaryBackgroundBrush}">
                <TextBlock Text="Preview Panel - Coming Soon"
                           FontSize="14"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
        </Grid>
        
        <!-- Dialog Buttons -->
        <Border Grid.Row="1"
                BorderBrush="{DynamicResource ControlBorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="0,12,0,0"
                Margin="0,12,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="OK" 
                        Command="{Binding OkCommand}"
                        IsDefault="True"
                        Width="80"
                        Padding="12,6"
                        Margin="0,0,8,0"/>
                <Button Content="Cancel" 
                        Command="{Binding CancelCommand}"
                        IsCancel="True"
                        Width="80"
                        Padding="12,6"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
