<UserControl x:Class="EasyAF.Modules.Spec.Views.Dialogs.Panels.ColumnExpressionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    
    <UserControl.Resources>
        <Style x:Key="SubsectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
        </Style>
        
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
    
    <!-- Only show when Expression mode is selected -->
    <Border BorderBrush="{DynamicResource ControlBorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Padding="8"
            Margin="0,0,0,8"
            Visibility="{Binding IsExpressionMode, Converter={StaticResource BoolToVis}}">
        
        <StackPanel>
            <TextBlock Text="Numeric Expression:" Style="{StaticResource SubsectionHeaderStyle}"/>
            <TextBlock FontSize="10"
                       FontStyle="Italic"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       Margin="0,0,0,4"
                       TextWrapping="Wrap">
                <Run Text="Use {PropertyName} tokens for numeric calculations (+, -, *, /, parentheses)"/>
            </TextBlock>
            
            <TextBox Text="{Binding Expression, UpdateSourceTrigger=PropertyChanged}"
                     Background="{DynamicResource ControlBackgroundBrush}"
                     Foreground="{DynamicResource TextPrimaryBrush}"
                     BorderBrush="{DynamicResource ControlBorderBrush}"
                     FontFamily="Consolas"
                     FontSize="11"
                     Padding="6,4"
                     Margin="0,0,0,8"/>
            
            <TextBlock Text="Number Format:" 
                       Margin="0,0,0,2" 
                       Foreground="{DynamicResource TextPrimaryBrush}"/>
            <ComboBox SelectedValue="{Binding NumberFormat, UpdateSourceTrigger=PropertyChanged}"
                      SelectedValuePath="Tag"
                      IsEditable="True"
                      Background="{DynamicResource ControlBackgroundBrush}"
                      Foreground="{DynamicResource TextPrimaryBrush}"
                      BorderBrush="{DynamicResource ControlBorderBrush}"
                      Margin="0,0,0,8">
                <ComboBoxItem Content="0.0 (1 decimal)" Tag="0.0"/>
                <ComboBoxItem Content="0.00 (2 decimals)" Tag="0.00"/>
                <ComboBoxItem Content="0 (whole number)" Tag="0"/>
                <ComboBoxItem Content="0.0% (percentage)" Tag="0.0%"/>
                <ComboBoxItem Content="#,##0 (with commas)" Tag="#,##0"/>
                <ComboBoxItem Content="#,##0.0 (commas + 1 decimal)" Tag="#,##0.0"/>
            </ComboBox>
            
            <TextBlock Text="Example:" 
                       FontSize="10" 
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       Margin="0,4,0,2"/>
            <TextBlock FontSize="10" 
                       FontFamily="Consolas"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       Text="{}({SCIntKA}-{DutyKA})/{SCIntKA}*100"/>
        </StackPanel>
    </Border>
</UserControl>
