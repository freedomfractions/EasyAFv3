<UserControl x:Class="EasyAF.Modules.Spec.Views.Dialogs.Panels.ColumnPropertyPathsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    
    <UserControl.Resources>
        <Style x:Key="SubsectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
        </Style>
        
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
    
    <!-- Only show when PropertyPath mode is selected -->
    <Border BorderBrush="{DynamicResource ControlBorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Padding="8"
            Margin="0,0,0,8"
            Visibility="{Binding IsPropertyPathMode, Converter={StaticResource BoolToVis}}">
        
        <StackPanel>
            <TextBlock Text="Property Paths (ordered top to bottom):" 
                       Style="{StaticResource SubsectionHeaderStyle}"/>
            
            <Grid Margin="0,4,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="4"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Property List -->
                <ListBox Grid.Column="0"
                         ItemsSource="{Binding PropertyPaths}"
                         SelectedItem="{Binding SelectedPropertyPath}"
                         Height="120"
                         Background="{DynamicResource ControlBackgroundBrush}"
                         Foreground="{DynamicResource TextPrimaryBrush}"
                         BorderBrush="{DynamicResource ControlBorderBrush}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" 
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <!-- Buttons -->
                <StackPanel Grid.Column="2" VerticalAlignment="Top">
                    <Button Content="Add..." 
                            Command="{Binding AddPropertyPathCommand}"
                            Width="80"
                            Margin="0,0,0,4"
                            Padding="8,4"/>
                    <Button Content="Remove" 
                            Command="{Binding RemovePropertyPathCommand}"
                            Width="80"
                            Margin="0,0,0,4"
                            Padding="8,4"/>
                    <Button Content="Move Up" 
                            Command="{Binding MovePropertyPathUpCommand}"
                            Width="80"
                            Margin="0,0,0,4"
                            Padding="8,4"/>
                    <Button Content="Move Down" 
                            Command="{Binding MovePropertyPathDownCommand}"
                            Width="80"
                            Padding="8,4"/>
                </StackPanel>
            </Grid>
            
            <TextBlock Text="Join With:" 
                       Margin="0,8,0,2" 
                       Foreground="{DynamicResource TextPrimaryBrush}"/>
            <ComboBox SelectedValue="{Binding JoinWith, UpdateSourceTrigger=PropertyChanged}"
                      SelectedValuePath="Tag"
                      Background="{DynamicResource ControlBackgroundBrush}"
                      Foreground="{DynamicResource TextPrimaryBrush}"
                      BorderBrush="{DynamicResource ControlBorderBrush}">
                <ComboBoxItem Content="Newline (stacked)" Tag="\n"/>
                <ComboBoxItem Content="Space" Tag=" "/>
                <ComboBoxItem Content="Comma" Tag=", "/>
                <ComboBoxItem Content="Semicolon" Tag="; "/>
                <ComboBoxItem Content="Pipe" Tag=" | "/>
                <ComboBoxItem Content="Slash" Tag=" / "/>
                <ComboBoxItem Content="None (concatenate)" Tag=""/>
            </ComboBox>
        </StackPanel>
    </Border>
</UserControl>
