<UserControl x:Class="EasyAF.Modules.Spec.Views.Dialogs.Panels.ColumnLiteralPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    
    <UserControl.Resources>
        <Style x:Key="SubsectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
        </Style>
        
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
    
    <!-- Only show when Literal mode is selected -->
    <Border BorderBrush="{DynamicResource ControlBorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Padding="8"
            Margin="0,0,0,8"
            Visibility="{Binding IsLiteralMode, Converter={StaticResource BoolToVis}}">
        
        <StackPanel>
            <TextBlock Text="Literal Text:" Style="{StaticResource SubsectionHeaderStyle}"/>
            <TextBox Text="{Binding Literal, UpdateSourceTrigger=PropertyChanged}"
                     Background="{DynamicResource ControlBackgroundBrush}"
                     Foreground="{DynamicResource TextPrimaryBrush}"
                     BorderBrush="{DynamicResource ControlBorderBrush}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Height="60"
                     Padding="6,4"
                     VerticalScrollBarVisibility="Auto"/>
        </StackPanel>
    </Border>
</UserControl>
