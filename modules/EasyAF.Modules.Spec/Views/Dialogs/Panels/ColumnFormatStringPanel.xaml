<UserControl x:Class="EasyAF.Modules.Spec.Views.Dialogs.Panels.ColumnFormatStringPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    
    <UserControl.Resources>
        <Style x:Key="SubsectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
        </Style>
        
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
    
    <!-- Only show when Format mode is selected -->
    <Border BorderBrush="{DynamicResource ControlBorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Padding="8"
            Margin="0,0,0,8"
            Visibility="{Binding IsFormatMode, Converter={StaticResource BoolToVis}}">
        
        <StackPanel>
            <TextBlock Text="Format Template:" Style="{StaticResource SubsectionHeaderStyle}"/>
            <TextBlock FontSize="10"
                       FontStyle="Italic"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       Margin="0,0,0,4"
                       TextWrapping="Wrap">
                <Run Text="Use {PropertyName} tokens. Wrap optional sections in &lt;...&gt;"/>
            </TextBlock>
            
            <TextBox Text="{Binding Format, UpdateSourceTrigger=PropertyChanged}"
                     Background="{DynamicResource ControlBackgroundBrush}"
                     Foreground="{DynamicResource TextPrimaryBrush}"
                     BorderBrush="{DynamicResource ControlBorderBrush}"
                     FontFamily="Consolas"
                     FontSize="11"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Height="80"
                     Padding="6,4"
                     VerticalScrollBarVisibility="Auto"/>
            
            <Button Content="Insert Token..." 
                    Command="{Binding InsertFormatTokenCommand}"
                    HorizontalAlignment="Left"
                    Margin="0,4,0,8"
                    Padding="12,6"/>
            
            <TextBlock Text="Examples:" 
                       FontSize="10" 
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       Margin="0,4,0,2"/>
            <TextBlock FontSize="10" 
                       FontFamily="Consolas"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       Margin="0,0,0,2"
                       Text="{}{BreakerMfr} {BreakerType}"/>
            <TextBlock FontSize="10" 
                       FontFamily="Consolas"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       Text="{}{TripMfr} Trip&lt;\n({TripStyle})&gt;"/>
        </StackPanel>
    </Border>
</UserControl>
