<UserControl x:Class="EasyAF.Modules.Spec.Views.Dialogs.Panels.ColumnFormattingPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    
    <UserControl.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
        </Style>
    </UserControl.Resources>
    
    <StackPanel>
        <TextBlock Text="FORMATTING" Style="{StaticResource SectionHeaderStyle}"/>
        
        <Grid Margin="0,4,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="Horizontal Align:" 
                           Margin="0,0,0,2" 
                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                <ComboBox SelectedValue="{Binding HorizontalAlignment, UpdateSourceTrigger=PropertyChanged}"
                          SelectedValuePath="Tag"
                          Background="{DynamicResource ControlBackgroundBrush}"
                          Foreground="{DynamicResource TextPrimaryBrush}"
                          BorderBrush="{DynamicResource ControlBorderBrush}">
                    <ComboBoxItem Content="(default)" Tag=""/>
                    <ComboBoxItem Content="Left" Tag="left"/>
                    <ComboBoxItem Content="Center" Tag="center"/>
                    <ComboBoxItem Content="Right" Tag="right"/>
                </ComboBox>
            </StackPanel>
            
            <StackPanel Grid.Column="2">
                <TextBlock Text="Vertical Align:" 
                           Margin="0,0,0,2" 
                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                <ComboBox SelectedValue="{Binding VerticalAlignment, UpdateSourceTrigger=PropertyChanged}"
                          SelectedValuePath="Tag"
                          Background="{DynamicResource ControlBackgroundBrush}"
                          Foreground="{DynamicResource TextPrimaryBrush}"
                          BorderBrush="{DynamicResource ControlBorderBrush}">
                    <ComboBoxItem Content="(default)" Tag=""/>
                    <ComboBoxItem Content="Top" Tag="top"/>
                    <ComboBoxItem Content="Center" Tag="center"/>
                    <ComboBoxItem Content="Bottom" Tag="bottom"/>
                </ComboBox>
            </StackPanel>
        </Grid>
        
        <TextBlock Text="Font Override:" 
                   Margin="0,4,0,2" 
                   Foreground="{DynamicResource TextPrimaryBrush}"/>
        <Grid Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <ComboBox Grid.Column="0"
                      SelectedValue="{Binding FontName, UpdateSourceTrigger=PropertyChanged}"
                      SelectedValuePath="Tag"
                      IsEditable="True"
                      Background="{DynamicResource ControlBackgroundBrush}"
                      Foreground="{DynamicResource TextPrimaryBrush}"
                      BorderBrush="{DynamicResource ControlBorderBrush}">
                <ComboBoxItem Content="(default)" Tag=""/>
                <ComboBoxItem Content="Arial" Tag="Arial"/>
                <ComboBoxItem Content="Calibri" Tag="Calibri"/>
                <ComboBoxItem Content="Times New Roman" Tag="Times New Roman"/>
                <ComboBoxItem Content="Consolas" Tag="Consolas"/>
            </ComboBox>
            
            <ComboBox Grid.Column="2"
                      SelectedValue="{Binding FontSize, UpdateSourceTrigger=PropertyChanged}"
                      SelectedValuePath="Tag"
                      IsEditable="True"
                      Background="{DynamicResource ControlBackgroundBrush}"
                      Foreground="{DynamicResource TextPrimaryBrush}"
                      BorderBrush="{DynamicResource ControlBorderBrush}">
                <ComboBoxItem Content="(default)" Tag=""/>
                <ComboBoxItem Content="8pt" Tag="8"/>
                <ComboBoxItem Content="9pt" Tag="9"/>
                <ComboBoxItem Content="10pt" Tag="10"/>
                <ComboBoxItem Content="11pt" Tag="11"/>
                <ComboBoxItem Content="12pt" Tag="12"/>
                <ComboBoxItem Content="14pt" Tag="14"/>
            </ComboBox>
        </Grid>
    </StackPanel>
</UserControl>
