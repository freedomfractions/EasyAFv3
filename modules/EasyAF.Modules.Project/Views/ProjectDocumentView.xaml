<UserControl x:Class="EasyAF.Modules.Project.Views.ProjectDocumentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:EasyAF.Modules.Project.ViewModels"
             xmlns:views="clr-namespace:EasyAF.Modules.Project.Views">
    
    <Grid Background="{DynamicResource PrimaryBackgroundBrush}">
        <TabControl ItemsSource="{Binding TabHeaders}"
                    SelectedIndex="{Binding SelectedTabIndex}"
                    BorderThickness="0">
            
            <!-- Tab Header Template -->
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding DisplayName}"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
            
            <!-- Tab Content Template -->
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding ViewModel}">
                        <ContentControl.Resources>
                            <!-- Map ViewModels to Views -->
                            <DataTemplate DataType="{x:Type vm:ProjectSummaryViewModel}">
                                <views:ProjectSummaryView/>
                            </DataTemplate>
                            <!-- TODO Task 21: Add DataTypeTabViewModel template -->
                        </ContentControl.Resources>
                    </ContentControl>
                </DataTemplate>
            </TabControl.ContentTemplate>
            
        </TabControl>
    </Grid>
</UserControl>
